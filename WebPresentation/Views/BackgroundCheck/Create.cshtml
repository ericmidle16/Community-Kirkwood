@model DataDomain.BackgroundCheckVM

@{
    ViewData["Title"] = "Create";

    // IEnumerable<string> statuses = ViewBag.Statuses;
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm p-4">
                <h2 class="text-center mb-4">Create Background Check</h2>
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="InvestigatorName" class="control-label"></label>
                        <input asp-for="InvestigatorName" class="form-control" disabled="true" value="@Model.InvestigatorName" />
                        <span asp-validation-for="InvestigatorName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="VolunteerName" class="control-label"></label>
                        <input asp-for="VolunteerName" class="form-control" disabled="true" value="@Model.VolunteerName" />
                        <span asp-validation-for="VolunteerName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProjectName" class="control-label"></label>
                        <input asp-for="ProjectName" class="form-control" disabled="true" value="@Model.ProjectName" />
                        <span asp-validation-for="ProjectName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Status" class="control-label"></label>
                        <input asp-for="Status" class="form-control" disabled="true" value="In Progress" />
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <input asp-for="Investigator" class="form-control" value="@Model.Investigator" hidden />
                    <input asp-for="UserID" class="form-control" value="@Model.UserID" hidden />
                    <input asp-for="ProjectID" class="form-control" value="@Model.ProjectID" hidden />
                    <input asp-for="Status" class="form-control" value="In Progress" hidden />


                    <div class="form-group text-center mt-4">
                        <input type="submit" value="Create" class="btn btn-success" />
                        <a href="@Url.Action("Index", "VolunteerStatus", new { id = Model.ProjectID })" class="btn btn-secondary">Back to Volunteer Requests</a>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
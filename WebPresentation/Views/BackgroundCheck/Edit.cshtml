@model DataDomain.BackgroundCheckVM

@{
    ViewData["Title"] = "Edit";

    IEnumerable<string> statuses = ViewBag.Statuses;
}


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm p-4">
                <h2 class="text-center mb-4">Edit Background Check</h2>
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="InvestigatorName" class="control-label"></label>
                        <input asp-for="InvestigatorName" class="form-control" disabled="true" />
                        <span asp-validation-for="InvestigatorName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="VolunteerName" class="control-label"></label>
                        <input asp-for="VolunteerName" class="form-control" disabled="true" />
                        <span asp-validation-for="VolunteerName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProjectName" class="control-label"></label>
                        <input asp-for="ProjectName" class="form-control" disabled="true" />
                        <span asp-validation-for="ProjectName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Status" class="control-label"></label>
                        @Html.DropDownListFor(m => m.Status, new SelectList(statuses), new { @class = "form-control" })
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center mt-4">
                        <input type="submit" value="Edit" class="btn btn-warning" />
                        <a href="@Url.Action("Index", new { id = Model.ProjectID })" class="btn btn-secondary">Back to Background Checks</a>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@model DataDomain.DonationVM

@{
    ViewData["Title"] = "View Donation Details";
}


<div class="container mt-3">
    <div class="card">
        <div class="card-header bg-dark text-white">
            <h2 class="m-0">Donation Details</h2>
        </div>
        <div class="card-body">
            <dl class="row">
                 <dt class="col-sm-3 font-weight-bold" hidden>
                    Project ID:
                </dt>
                <dd class="col-sm-9" hidden>
                    @Html.DisplayFor(model => model.ProjectID)
                </dd>
                 <dt class="col-sm-3 font-weight-bold">
                    Project Name:
                </dt>
                <dd class="col-sm-9">
                    @Model.Name
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    Location Name:
                </dt> 
                <dd class = "col-sm-9">
                    @Model.LocationName
                </dd>
                 <dt class="col-sm-3 font-weight-bold">
                    Donation Date:
                </dt>
                <dd class="col-sm-9">
                    @Model.DonationDate
                </dd>
                 <dt class="col-sm-3 font-weight-bold">
                    Donation Amount:
                </dt>
                <dd class="col-sm-9">
                    @Model.Amount
                </dd>
                 <dt class="col-sm-3 font-weight-bold">
                    Comment:
                </dt>
                <dd class="col-sm-9">
                    @Model.Description
                </dd>
            </dl>
        </div>
    </div>
</div>
<div class="container mt-3">
    <a href="@Url.Action("ViewDonationInvoice", new { id = Model.DonationID })" class="btn btn-info">Invoice</a>
    <a href="@Url.Action("ViewDonationHistory", new { id = Model.UserID })" class="btn btn-secondary">Back to Donation History</a>
</div>

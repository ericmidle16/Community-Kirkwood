@model IEnumerable<DataDomain.DonationVM>

@{
    ViewData["Title"] = "Donation List";
}

<h1 class="text-center">All Donations</h1>

<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th class="header" hidden>
                @Html.DisplayNameFor(model => model.DonationID)
            </th>
            <th class="header">
                Donation Type
            </th>
            <th class="header">
                Username
            </th>
            <th class="header">
                Project Name
            </th>
            <th class="header">
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th class="header">
                Donation Date
            </th>
            <th class="header">
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th class="header" hidden></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.DonationID)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonationType)
            </td>
            <td>
                @item.UserName
            </td>
            <td>
                @item.Name
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td hidden>
                @* <a asp-action="Edit" asp-route-id="@item.DonationID">Edit</a> | *@
                @* <a asp-action="Details" asp-route-id="@item.DonationID">Details</a>  *@
                @* <a asp-action="Delete" asp-route-id="@item.DonationID">Delete</a> *@
            </td>
        </tr>
}
    </tbody>
</table>

@model IEnumerable<DataDomain.DonationSummaryVM>

@{
    ViewData["Title"] = "Summary Donations";
    var userID = ViewBag.ActiveUserID;
}

<h1 class="text-center">Donation Summary</h1>

<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th class="header">
                Project Name
            </th>
            <th class="header">
                Project Location
            </th>
            <th class="header">
                Monetary Donation Total
            </th>
            <th class="header">
                Last Donation Date
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MonetaryDonationTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FormattedLastDonationDate)
            </td>
        </tr>
}
    </tbody>
</table>
<div class="d-flex flex-wrap justify-content-center gap-2">
    <a href="@Url.Action("ViewDonationHistory", new { id = userID })" class="btn btn-secondary">Back to Donation History</a>
</div>
@model DataDomain.Event

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-3">
    <div class="card">
        <div class="card-header bg-dark text-white">
            <h2 class="m-0">Event Details</h2>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold" hidden>
                    @Html.DisplayNameFor(model => model.EventID)
                </dt>
                <dd class="col-sm-9" hidden>
                    @Html.DisplayFor(model => model.EventID)
                </dd>
               <dt class="col-sm-3 font-weight-bold">
                    Event Type
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.EventTypeID)
                </dd>
               <dt class="col-sm-3 font-weight-bold" hidden>
                    @Html.DisplayNameFor(model => model.ProjectID)
                </dt>
                <dd class="col-sm-9" hidden>
                    @Html.DisplayFor(model => model.ProjectID)
                </dd>
               <dt class="col-sm-3 font-weight-bold">
                    Date Created
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.DateCreated)
                </dd>
               <dt class="col-sm-3 font-weight-bold">
                    Start Date
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.StartDate)
                </dd>
               <dt class="col-sm-3 font-weight-bold">
                    End Date
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.EndDate)
                </dd>
               <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Name)
                </dd>
               <dt class="col-sm-3 font-weight-bold" hidden>
                    @Html.DisplayNameFor(model => model.LocationID)
                </dt>
                <dd class="col-sm-9" hidden>
                    @Html.DisplayFor(model => model.LocationID)
                </dd>
               <dt class="col-sm-3 font-weight-bold">
                    Volunteers Needed
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.VolunteersNeeded)
                </dd>
               <dt class="col-sm-3 font-weight-bold" hidden>
                    @Html.DisplayNameFor(model => model.UserID)
                </dt>
                <dd class="col-sm-9" hidden>
                    @Html.DisplayFor(model => model.UserID)
                </dd>
               <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Notes)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Notes)
                </dd>
               <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Description)
                </dd>
               <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Active)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Active)
                </dd>
            </dl>
        </div>
    </div>
</div>
<div class="container mt-3">
   
    <a class="btn btn-info" asp-area="" asp-controller="Task" asp-action="ViewEventTasks" asp-route-eventID=@Model.EventID asp-route-eventName=@Model.Name asp-route-projectID=@Model.ProjectID>Event Tasks</a> 
    <a class="btn btn-info" asp-area="" asp-controller="Task" asp-action="ViewEventVolunteers" asp-route-eventID=@Model.EventID asp-route-eventName=@Model.Name asp-route-projectID=@Model.ProjectID>Assigned Volunteers</a> 
    <a class="btn btn-info" asp-area="" asp-controller="Task" asp-action="ViewUnassignedVolunteers" asp-route-eventID=@Model.EventID asp-route-eventName=@Model.Name asp-route-projectID=@Model.ProjectID>Assign Volunteers</a>
    <a class="btn btn-info" asp-area="" asp-controller="Project" asp-action="RequestVolunteer" asp-route-eventID=@Model.EventID>Request Volunteers</a>

    <a class="btn btn-info" asp-area="" asp-controller="Project" asp-action="Details" asp-route-id=@Model.ProjectID>View Project</a> 
    @Html.ActionLink("Edit", "Edit", new { id = Model.EventID }, new { @class = "btn btn-warning" }) 
    <a class="btn btn-secondary" asp-action="Index">Back to Events</a>

</div>
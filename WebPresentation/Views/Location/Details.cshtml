@model DataDomain.Location

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-3">
    <div class="card">
        <div class="card-header bg-dark text-white">
            <h2 class="m-0">Location Details</h2>
        </div>
        <div class="card-body">
            <dl class="row">
               <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Name)
                </dd>
               <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Address)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Address)
                </dd>
               <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.City)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.City)
                </dd>
               <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.State)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.State)
                </dd>
               <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Zip)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Zip)
                </dd>
               <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Country)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Country)
                </dd>
               <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Description)
                </dd>
            </dl>
        </div>
    </div>
</div>
<div class="container mt-3">
    <a href="@Url.Action("Edit", new { id = Model.LocationID })" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary btn">Back to Locations</a>
</div>
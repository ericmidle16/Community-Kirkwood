@model DataDomain.ProjectVM

@{
    ViewData["Title"] = "Leave";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm p-4">
                <h2 class="text-center mb-4">Leave Project</h2>

                <p class="text-center text-danger">
                    You are about to permanently remove yourself as a volunteer for this project.<br />
                    If you hit leave, you will no longer be assigned to this project.<br />
                    If this is not what you want to do, please hit cancel.
                </p>

                <dl class="row mb-4">
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Name)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Status)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Status)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.FormattedStartDate)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.FormattedStartDate)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ProjectTypeID)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.ProjectTypeID)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.LocationName)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.LocationName)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.City)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.City)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.State)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.State)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Description)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>
                </dl>

                <form asp-action="Leave">
                    <input type="hidden" name="userID" value="@ViewBag.UserID" />
                    <div class="form-group text-center mt-4">
                        <input type="submit" value="Leave" class="btn btn-danger" />
                        <a asp-action="Index" class="btn btn-secondary ml-3">Back to Projects</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

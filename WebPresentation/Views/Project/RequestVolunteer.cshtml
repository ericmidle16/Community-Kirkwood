@model DataDomain.Notification

@{
    ViewData["Title"] = "RequestVolunteer";
    int eventID = ViewBag.EventID;
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm p-4">
                <h2 class="text-center mb-4">Request Volunteer</h2>

                <form asp-action="RequestVolunteer">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Name</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group" hidden>
                        <label asp-for="Sender" class="control-label">Sender</label>
                        <input asp-for="Sender" class="form-control" />
                        <span asp-validation-for="Sender" class="text-danger"></span>
                    </div>

                    <div class="form-group" hidden>
                        <label asp-for="Receiver" class="control-label">Receiver</label>
                        <input asp-for="Receiver" class="form-control" />
                        <span asp-validation-for="Receiver" class="text-danger"></span>
                    </div>

                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Important" /> @Html.DisplayNameFor(model => model.Important)
                        </label>
                    </div>

                    <div class="form-group form-check" hidden>
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsViewed" /> @Html.DisplayNameFor(model => model.IsViewed)
                        </label>
                    </div>

                    <div class="form-group">
                        <label asp-for="Date" class="control-label">Date</label>
                        <input asp-for="Date" class="form-control" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Content" class="control-label">Content</label>
                        <input asp-for="Content" class="form-control" />
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>

                    <input type="hidden" value="@eventID" name="EventID" />

                    <div class="form-group text-center mt-4">
                        <input type="submit" value="Create" class="btn btn-success" />
                        <a asp-action="Index" class="btn btn-secondary">Back to Project</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
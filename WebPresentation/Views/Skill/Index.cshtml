@model List<DataDomain.Skill>

@{
}

<h1 class="text-center">View Skills</h1>

<div class="row">
    <div class="col-md-12">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div style="width: 100%">
            <table class="table table-striped table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th class="header">Skill Name</th>
                        <th class="header">Description</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>
                                <div class="form-group">
                                    <label asp-for="@Model[i].SkillID" class="control-label">@Model[i].SkillID</label>
                                    <input asp-for="@Model[i].SkillID" type="hidden" />
                                </div>
                            </td>
                            <td>
                                <div class="form-group">
                                    <label asp-for="@Model[i].Description" class="control-label">@Model[i].Description</label>
                                    <input asp-for="@Model[i].Description" type="hidden" />
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


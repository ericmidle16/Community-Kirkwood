@model List<DataDomain.SkillVM>

@{
    int userID = ViewBag.UserID;
}

<h1 class="text-center">Update Skills</h1>

<div class="row">
    <div class="col-md-12">
        <form asp-action="UpdateSkills" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div style="width: 100%">
                <table class="table table-striped table-bordered table-hover">
                    <thead class="thead-dark">
                            <tr>
                                <th class="header">Skill Name</th>
                                <th class="header">Description</th>
                                <th class="header">Your Skills</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <tr>
                                    <td>
                                        <div class="form-group">
                                            <label asp-for="@Model[i].SkillID" class="control-label">@Model[i].SkillID</label>
                                            <input asp-for="@Model[i].SkillID" type="hidden"/>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-group">
                                            <label asp-for="@Model[i].Description" class="control-label">@Model[i].Description</label>
                                            <input asp-for="@Model[i].Description" type="hidden"/>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-group">
                                            <input asp-for="@Model[i].Active" type="checkbox" />
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            <input type="hidden" name="userID" value="@ViewBag.UserID" />

            <div class="form-group text-center">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>


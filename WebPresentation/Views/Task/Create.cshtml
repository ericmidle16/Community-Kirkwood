@model DataDomain.Task

@{
    ViewData["Title"] = "Create Task";

    IEnumerable<string> taskTypes = ViewBag.TaskTypes;
    DataDomain.Event currentEvent = ViewBag.Event;
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm p-4">
                <h2 class="text-center mb-4">Create Task</h2>

                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Task Name</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="control-label">Task Description</label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="TaskDate" class="control-label">Task Date</label>
                        <input asp-for="TaskDate" class="form-control" type="date" />
                        <span asp-validation-for="TaskDate" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="TaskType" class="control-label">Task Type</label>
                        @Html.DropDownListFor(m => m.TaskType, new SelectList(taskTypes), "Select Task Type", new { @class = "form-control" })
                        <span asp-validation-for="TaskType" class="text-danger"></span>
                    </div>

                    <div class="form-group form-check mt-3">
                        <input class="form-check-input" asp-for="Active" />
                        <label class="form-check-label" asp-for="Active">Active</label>
                    </div>

                    <input type="hidden" name="eventID" value="@currentEvent.EventID" />

                    <div class="form-group text-center mt-4">
                        <input type="submit" value="Create" class="btn btn-success" />
                        <a class="btn btn-secondary ml-3"
                           asp-controller="Task"
                           asp-action="ViewEventTasks"
                           asp-route-eventID="@currentEvent.EventID"
                           asp-route-eventName="@currentEvent.Name"
                           asp-route-projectID="@currentEvent.ProjectID">
                            Back to Tasks
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@using DataDomain
@model Vehicle

@{
    ViewData["Title"] = "Add Insurance";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm p-4">
                <h2 class="text-center mb-4">Insert a Photo of Your Insurance</h2>

                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger text-center">
                        @ViewBag.ErrorMessage
                    </div>
                }

                <form method="post" action="@Url.Action("AddInsurance")" enctype="multipart/form-data">

                    @Html.AntiForgeryToken()

                    @* All the hidden inputs are here so I can return a vehicle *@
                    <input type="hidden" name="userID" value="@ViewBag.UserID" />
                    <input type="hidden" name="VehicleID" value="@Model.VehicleID" />
                    <input type="hidden" name="Make" value="@Model.Make" />
                    <input type="hidden" name="Model" value="@Model.Model" />
                    <input type="hidden" name="Color" value="@Model.Color" />
                    <input type="hidden" name="TransportUtility" value="@Model.TransportUtility" />
                    <input type="hidden" name="LicensePlateNumber" value="@Model.LicensePlateNumber" />

                    @* shows the selected image *@
                    <div class="form-group text-center">
                        <img id="imgPreview" width="350" height="auto" style="display:none; width: 10em; margin-top: 20px;" />
                    </div>

                    @* shows the choose image input *@
                    <div class="form-group" style="margin-top: 1em">
                        <input type="file" name="imageFile" id="imageFile" class="form-control" onchange="previewImage(event)">
                    </div>

                    <div class="form-group text-center mt-4">
                        <button type="submit" class="btn btn-success">Add</button>
                        <a href="/Vehicle/Index?id=@ViewBag.UserID" class="btn btn-secondary ml-3">Back to Vehicles</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // creates a function to preview the selected image
        function previewImage(event) {
            var reader = new FileReader(); // creates a file reader object
            reader.onload = function () { // an event handler that executes when the file is read
                var imgPreview = document.getElementById('imgPreview'); // gets the image element
                imgPreview.src = reader.result; // gives the image the desired src
                imgPreview.style.display = 'block'; // makes the image visible
            };
            reader.readAsDataURL(event.target.files[0]); // reads the first file from input
        }
    </script>
}

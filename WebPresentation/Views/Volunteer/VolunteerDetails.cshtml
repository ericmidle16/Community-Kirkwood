@model DataDomain.VolunteerVM

@{
    ViewData["Title"] = "Volunteer Details";
}

<h1 class="text-center">Applicant Volunteer Profile</h1>
<br />
<h2 class="text-center">Projects</h2>

<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th class="header">
                Project Name
            </th>
            <th class="header">
                Project Type
            </th>
            <th class="header">
                Start Date
            </th>
            <th class="header">
                Status
            </th>
            <th class="header">
                Description
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Projects)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectTypeID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<h2 class="text-center">Availability</h2>
<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th class="header">
                Start Date
            </th>
            <th class="header">
                End Date
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Availability)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<h2 class="text-center">Skills</h2>
<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th class="header">
                Skill
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Skills)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SkillID)
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<h2 class="text-center">Vehicles</h2>
<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th class="header">
                Make
            </th>
            <th class="header">
                Model
            </th>
            <th class="header">
                Seat Number
            </th>
            <th class="header">
                Utility
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Vehicles)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Make)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfSeats)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TransportUtility)
                </td>
            </tr>
        }
    </tbody>
</table>
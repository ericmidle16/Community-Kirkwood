@model DataDomain.Notification

@{
    ViewData["Title"] = "Create Notification";
    int passedProjectID = ViewBag.passedProjectID;
    int userID = ViewBag.userID;
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm p-4">
                <h2 class="text-center mb-4">Create Notification</h2>

                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label class="control-label">Notification Name</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group" hidden>
                        <label class="control-label">Sender</label>
                        <input asp-for="Sender" value="@userID" class="form-control" />
                        <span asp-validation-for="Sender" class="text-danger"></span>
                    </div>

                    <div class="form-group" hidden>
                        <label class="control-label">Receiver</label>
                        <input asp-for="Receiver" class="form-control" />
                        <span asp-validation-for="Receiver" class="text-danger"></span>
                    </div>

                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Important" /> @Html.DisplayNameFor(model => model.Important)
                        </label>
                    </div>

                    <div class="form-group form-check" hidden>
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsViewed" /> @Html.DisplayNameFor(model => model.IsViewed)
                        </label>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Date</label>
                        <input asp-for="Date" class="form-control" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Content</label>
                        <input asp-for="Content" class="form-control" />
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>

                    <input type="hidden" value="@passedProjectID" name="ProjectID" />

                    <div class="form-group text-center mt-4">
                        <input type="submit" value="Create Notification" class="btn btn-success" />
                    </div>
                </form>
                <a asp-action="Index" asp-controller="Event" asp-route-id="@passedProjectID" class="btn btn-secondary ml-3">Back to Event</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
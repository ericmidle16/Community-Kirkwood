    <Page x:Class="WpfPresentation.Pages.AcceptVolunteerOffers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPresentation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="700"
      Title="AcceptVolunteerOffers" Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="txtNoRequests" Grid.Column="1" Grid.Row="1" Visibility="Hidden" Text="There are no Volunteer Requests" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Label Content="Volunteer Requests" Grid.Row="0" Grid.Column="1" Style="{StaticResource TitleLabel}"/>


        <ScrollViewer Grid.Row="1" Grid.Column="1" CanContentScroll="True" >
            <ListView x:Name="lvVolunteerStatus" ItemsSource="{Binding _volunteerStatuses}" HorizontalAlignment="Center" VerticalAlignment="Center" AutomationProperties.IsOffscreenBehavior="Onscreen" ScrollViewer.CanContentScroll="True" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="1" BorderBrush="Black" Padding="5" Margin="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <Image x:Name="imgImage" Source="Placeholder.png" Width="81" Height="72" Grid.Column="0" />

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <Label Content="{Binding Name}" Style="{StaticResource LabelTop}"/>
                                    <Button x:Name="btnAccept" Content="Accept" Style="{StaticResource CallToAction}" Click="btnAccept_Click"/>
                                    <Button x:Name="btnReject" Content="Reject" Width="80" Style="{StaticResource DangerButton}" Click="btnReject_Click"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                    <Button Content="Submit Background Check" x:Name="btnBackgroundCheck" Height="30" Width="200" Grid.Column="2" Style="{StaticResource WarningButton}"  VerticalAlignment="Center" Click="btnBackgroundCheck_Click"/>
                                    <Button x:Name="btnMoreInfo" Content="More Info" Width="80" Height="30" Grid.Column="2" Style="{StaticResource CallToActionSecondary}"  VerticalAlignment="Center" Click="Button_Click"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>

        <Grid Grid.Row="2" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btnViewAll" Grid.Column="0" Content="View All Volunteers" Style="{StaticResource CallToActionSecondary}" Click="btnViewAll_Click"/>
            <Button x:Name="btnViewRejected" Grid.Column="1" Content="View Rejected" Style="{StaticResource WarningButton}" Click="btnViewRejected_Click"/>
            <Button x:Name="btnBack" Grid.Column="2" Content="Back" Style="{StaticResource BackButton}" Click="btnBack_Click"/>
        </Grid>

    </Grid>
</Page>

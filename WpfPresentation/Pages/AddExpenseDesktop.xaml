<Page x:Class="WpfPresentation.Pages.AddExpenseDesktop"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPresentation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="750"
      Title="AddExpenseDesktop">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="8*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource TitleLabel}" Content="Add Expense"/>

        <Label Grid.Row="1" Grid.Column="1" Content="Expense Date:" Style="{StaticResource LabelLeft}"/>
        <DatePicker x:Name="dpExpenseDate" Grid.Row="1" Grid.Column="2"/>

        <Label Grid.Row="2" Grid.Column="1" Content="Amount:" Style="{StaticResource LabelLeft}"/>
        <TextBox x:Name="txtExpenseAmount" Grid.Row="2" Grid.Column="2"/>

        <Label Grid.Row="3" Grid.Column="1" Content="Expense Type:" Style="{StaticResource LabelLeft}"/>
        <ComboBox x:Name="cmbExpenseType" Grid.Row="3" Grid.Column="2"/>

        <Label Grid.Row="4" Grid.Column="1" Content="Description:" Style="{StaticResource LabelLeft}"/>
        <TextBox 
                x:Name="txtExpenseDescription"
                Grid.Row="4"
                Grid.Column="2"
                Margin="10"
                TextWrapping="Wrap"
                AcceptsReturn="True"
                VerticalContentAlignment="Top"
                Padding="5"/>

        <Grid Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btnSubmitExpense" Grid.Column="0" Content="Submit" Click="btnSubmitExpense_Click" Style="{StaticResource CallToAction}"/>
            <Button x:Name="btnCancelExpense" Grid.Column="1" Content="Cancel" Click="btnCancelExpense_Click" Style="{StaticResource WarningButton}"/>
        </Grid>
    </Grid>
</Page>

    <Page x:Class="WpfPresentation.Pages.frmAddExternalContactType"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPresentation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="700"
      Title="AddExternalContactType">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Style="{StaticResource TitleLabel}">Add External Contact Type</Label>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="7*"/>
            </Grid.RowDefinitions>
            <!-- This Puts the Label next to the PasswordBox -->
            <DockPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label Style="{StaticResource LabelLeft}">Type Name</Label>
                <TextBox HorizontalAlignment="Left" VerticalAlignment="Center" Width="300" x:Name="txtName" 
                    Padding="0 3 0 3"></TextBox>
            </DockPanel>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="10*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Label Style="{StaticResource LabelTop}" Grid.Row="0" Grid.Column="1">Description</Label>
                <TextBox x:Name="txtDescription" MaxLength="250" Grid.Row="1" Grid.Column="1" Style="{StaticResource Description}"/>
            </Grid>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            
            

            <Button x:Name="btnSubmit" Style="{StaticResource CallToAction}" Grid.Column="1" Content="Submit" Click="btnSubmit_Click"/>
            <Button x:Name="btnCancel" Grid.Column="2" Content="Cancel" Style="{StaticResource WarningButton}" Click="btnCancel_Click"/>


        </Grid>
    </Grid>
</Page>

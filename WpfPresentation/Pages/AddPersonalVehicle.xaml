<Page x:Class="WpfPresentation.Pages.AddPersonalVehicle"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPresentation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="700"
      Title="addPersonalVehicle">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1.5*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="3.33*"></ColumnDefinition>
            <ColumnDefinition Width="3.33*"></ColumnDefinition>
            <ColumnDefinition Width="3.33*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="1" Grid.Column="1" Style="{StaticResource LabelTop}">Make</Label>
        <Label Grid.Row="3" Grid.Column="1" Style="{StaticResource LabelTop}">Model</Label>
        <Label Grid.Row="5" Grid.Column="1" Style="{StaticResource LabelTop}">Year</Label>
        <Label Grid.Row="7" Grid.Column="1" Style="{StaticResource LabelTop}">Color</Label>

        <Label Grid.Row="1" Grid.Column="2" Style="{StaticResource LabelTop}">Number of Seats</Label>
        <Label Grid.Row="3" Grid.Column="2" Style="{StaticResource LabelTop}">License Plate Number</Label>
        <Label Grid.Row="5" Grid.Column="2" Style="{StaticResource LabelTop}">VIN Number</Label>
        <Label Grid.Row="7" Grid.Column="2" Style="{StaticResource LabelTop}">Is your vehicle insured?</Label>

        <Label Grid.Row="1" Grid.Column="3" Style="{StaticResource LabelTop}">What can it transport?</Label>


        <Label Content="Insert Vehicle" Grid.Column="1" Grid.ColumnSpan="3" Style="{StaticResource TitleLabel}"/>
        <TextBox x:Name="txtMake" Grid.Row="2"          Grid.Column="1" Style="{StaticResource TextBottom}" Text="Ford"/>
        <TextBox x:Name="txtModel" Grid.Row="4"         Grid.Column="1" Style="{StaticResource TextBottom}" Text="Ford"/>
        <TextBox x:Name="txtYear" Grid.Row="6"          Grid.Column="1" Style="{StaticResource TextBottom}" PreviewTextInput="TextBox_OnlyAcceptNumbers" Text="2000"/>
        <TextBox x:Name="txtColor" Grid.Row="8"         Grid.Column="1" Style="{StaticResource TextBottom}" Text="Blue" />

        <TextBox x:Name="txtNumberSeats" Grid.Row="2"   Grid.Column="2" Style="{StaticResource TextBottom}" PreviewTextInput="TextBox_OnlyAcceptNumbers" Text="1" />
        <TextBox x:Name="txtLicensePlate" Grid.Row="4"  Grid.Column="2" Style="{StaticResource TextBottom}" Text="ABC-DE-12" />
        <TextBox x:Name="txtVIN" Grid.Row="6"           Grid.Column="2" Style="{StaticResource TextBottom}" Text="1HGCM82633A123456"/>

        <RadioButton x:Name="chkInsuredYes" Grid.Row="8" Grid.Column="2" Margin="10,10,1,10" HorizontalAlignment="Left" VerticalAlignment="Bottom" GroupName="insuredGroup" Content="Yes" FontSize="13"/>
        <RadioButton x:Name="chkInsuredNo" Grid.Row="8"  Grid.Column="2" Margin="70,10,0,10" VerticalAlignment="Bottom" HorizontalAlignment="Left" GroupName="insuredGroup" Content="No" FontSize="13"/>

        <ListBox x:Name="lstTransport" Grid.Row="2" Grid.Column="3" Grid.RowSpan="4" Style="{StaticResource ListBoxStyle}" Margin="10,10,10,10">
            <ListBoxItem Content = "Adults"/>
            <ListBoxItem Content = "Children"/>
            <ListBoxItem Content = "Animals"/>
            <ListBoxItem Content = "Equipment"/>
            <ListBoxItem Content = "Grocercies"/>
            <ListBoxItem Content = "Plants"/>
            <ListBoxItem Content = "Dirt/Sand/Salt"/>
            <ListBoxItem Content = "Rocks"/>
            <ListBoxItem Content = "Appliances"/>
            <ListBoxItem Content = "Oil"/>
            <ListBoxItem Content = "Paint/Sealers/Stain"/>
        </ListBox>

        <Button x:Name="btnSave" Grid.Row="9" Grid.Column="1" Content="Save" Style="{StaticResource CallToAction}" Click="btnSave_Click" />
        <Button x:Name="btnCancel" Grid.Row="9" Grid.Column="3" Content="Cancel" Style="{StaticResource WarningButton}" Click="btnCancel_Click" />
    </Grid>
</Page>


<Page x:Class="WpfPresentation.Pages.ChangeInvoiceStatus"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPresentation.Pages"
      mc:Ignorable="d" d:DesignWidth="700"
      Title="ChangeInvoiceStatus" Loaded="Page_Loaded" Height="450">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height=".5*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label x:Name="lblTitle" Grid.Row="0" Grid.Column="1" Content="Change Invoice Status" Grid.ColumnSpan="4" Style="{StaticResource TitleLabel}"/>

        <Label  Grid.Column="1" Grid.Row="1" Content="Status" Style="{StaticResource LabelLeft}"/>
        <ComboBox x:Name="txtStatus" Grid.Row="1" Grid.Column="2">
            <ComboBoxItem Content="Pending" />
            <ComboBoxItem Content="Paid" />
            <ComboBoxItem Content="Processed" />
        </ComboBox>

        <Label Grid.Column="3" Grid.Row="1" Content="Invoice ID" Style="{StaticResource LabelLeft}"/>
        <TextBox x:Name="txtInvoiceID" Grid.Column="4" Grid.Row="1" IsReadOnly="True"/>
        <Label Grid.Column="1" Grid.Row="2" Content="Expense ID" Style="{StaticResource LabelLeft}"/>
        <TextBox Grid.Column="2" Grid.Row="2" x:Name="txtExpenseID"  IsReadOnly="True"/>
        <Label Grid.Column="3" Grid.Row="2" Content="Invoice Date" Style="{StaticResource LabelLeft}"/>
        <DatePicker Grid.Column="4" Grid.Row="2" x:Name="txtInvoiceDate" IsEnabled="False"/>
        <Label Grid.Column="1" Grid.Row="3" Content="Invoice Number" Style="{StaticResource LabelLeft}"/>
        <TextBox Grid.Column="2" Grid.Row="3" x:Name="txtInvoiceNumber" IsReadOnly="True"/>
        
        <Label Grid.Column="3" Grid.Row="3" Content="Project ID" Style="{StaticResource LabelLeft}"/>
        <TextBox Grid.Column="4" Grid.Row="3" x:Name="txtProjectID" IsReadOnly="True"/>

        <Label Grid.Column="1" Grid.Row="4" Content="Invoice Description" Style="{StaticResource LabelTop}"/>
        <TextBox Grid.Column="1" Grid.ColumnSpan="4" Grid.Row="5" x:Name="txtInvoiceDescription" IsReadOnly="True" Style="{StaticResource Description}"/>

        <Button Grid.Column="1" Grid.Row="6" x:Name="btnSave" Content="Save" Style="{StaticResource CallToAction}" Click="btnSave_Click"/>
        <Button Grid.Column="4" Grid.Row="6" x:Name="btnCancel" Content="Cancel" Style="{StaticResource WarningButton}" Click="btnCancel_Click"/>
    </Grid>
</Page>



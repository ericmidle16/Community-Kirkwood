    <Summary>
    Creator: Skyann Heintz
    Created: 2025/02/02
    Summary: Xaml page for the Create Account screen. This UI allows users to enter
    their required information, such as email, name, phone number, and password,
    and submit the form to create an account.
    Last Updated By: Stan Anderson
    Last Updated: 2025-04-07
    What Was Changed: Updated UI
    </Summary>
-->
    
    <Page x:Class="WpfPresentation.Pages.CreateAccount"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPresentation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="700"
      Title="CreateAccount">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Content="Create an Account" Style="{StaticResource TitleLabel}"/>

        <!-- Email / UserName -->
        <Label Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Content="Enter an Email (Username):" Style="{StaticResource LabelTop}"/>
        <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" x:Name="txtEnterEmail" Style="{StaticResource TextBottom}"/>

        <!-- Given Name -->
        <Label Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Content="Enter your Given Name (First Name):" Style="{StaticResource LabelTop}"/>
         <TextBox Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" x:Name="txtEnterGivenName" Style="{StaticResource TextBottom}"/>
        
        <!-- Family Name -->
        <Label Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" Content="Enter your Family Name (Last Name):" Style="{StaticResource LabelTop}"/>
        <TextBox Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2" x:Name="txtEnterFamilyName" Style="{StaticResource TextBottom}"/>
        
        <!-- Phone Number -->
        <Label Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2" Content="Enter your Phone Number:" Style="{StaticResource LabelTop}"/>
        <TextBox Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="2" x:Name="txtEnterPhoneNumber" Style="{StaticResource TextBottom}"/>
        <!-- Password -->
        <Label Grid.Row="9" Grid.Column="1" Grid.ColumnSpan="2" Content="Choose a Password:" Style="{StaticResource LabelTop}"/>
        <PasswordBox Grid.Row="10" Grid.Column="1" Grid.ColumnSpan="2" x:Name="pwdChoosePassword" Style="{StaticResource PasswordBottom}"/>
        
        <!-- Buttons -->
        <Button Grid.Row="11" Grid.Column="1" Content="Create Account" Click="CreateAccountButton_Click" Style="{StaticResource CallToAction}"/>
        <Button Grid.Row="11" Grid.Column="2" Content="Cancel" Click="CancelCreateAccountButton_Click" Style="{StaticResource WarningButton}"/>

    </Grid>
</Page>
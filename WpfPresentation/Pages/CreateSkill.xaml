    <Page x:Class="WpfPresentation.Pages.createSkill"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPresentation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="createSkill">

    <Grid>
        <!-- Outer Page Grid -->
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Content="Create a New Skill" Style="{StaticResource TitleLabel}"/>

        <Label Grid.Row="1" Grid.Column="1" x:Name="lblSkillName" Content="Skill Name" Style="{StaticResource LabelLeft}"/>
        <TextBox Grid.Row="1" Grid.Column="2" x:Name="txtSkillName" />
        
        <Label Grid.Row="1" Grid.Column="1" x:Name="lblSkillDesc" Content="Skill Description" Style="{StaticResource LabelTop}"/>
        <TextBox Grid.Column="1" Grid.ColumnSpan="2" x:Name="txtSkillDesc" Grid.Row="2" Style="{StaticResource Description}" VerticalScrollBarVisibility="Auto"/>
        <Grid Grid.Column="1" Grid.Row="3">
            <Button x:Name="btnSkillSave" Content="Save" Style="{StaticResource CallToAction}" Click="btnSkillSave_Click"/>
        </Grid>
        <Grid Grid.Column="2" Grid.Row="3">
            <Button x:Name="btnSkillCancel" Content="Cancel" Style="{StaticResource WarningButton}" Click="btnSkillCancel_Click"/>
        </Grid>

    </Grid>
</Page>

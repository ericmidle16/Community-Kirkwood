<Page x:Class="WpfPresentation.Pages.frmDeactivateUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPresentation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="700"
      Title="DeactivateUser">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <TextBlock HorizontalAlignment="Center" Grid.Row="0" VerticalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap" FontSize="25">
            You are about to deactivate your profile.<LineBreak/>
            If you hit submit you will no longer be able to access your account or login.<LineBreak/>
            If this is not what you to do please hit cancel.
        </TextBlock>

        <!-- This Puts the Label next to the PasswordBox -->
        <DockPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Style="{StaticResource LabelLeft}">Password</Label>
            <PasswordBox HorizontalAlignment="Left" VerticalAlignment="Center" Width="300" x:Name="pwdPassword" 
                         Padding="0 3 0 3" Margin="10,0,0,0" FontSize="20"></PasswordBox>
        </DockPanel>


        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btnDeactivate" Grid.Column="0" Content="Deactivate" Click="btnDeactivate_Click" Style="{StaticResource DangerButton}"/>

            <Button x:Name="btnCancel" Grid.Column="1" Content="Cancel" Style="{StaticResource BackButton}" Click="btnCancel_Click"/>

        </Grid>
    </Grid>
</Page>

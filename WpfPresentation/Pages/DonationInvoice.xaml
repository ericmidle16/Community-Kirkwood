<Page x:Class="WpfPresentation.Pages.DonationInvoice"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPresentation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="700"
      Title="DonationInvoice" Loaded="Page_Loaded">

    <Grid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Content="Donation Invoice" Style="{StaticResource TitleLabel}"/>


            <Label Grid.Column="1" Grid.Row="1" Content="Donation ID:" Style="{StaticResource LabelLeft}"/>
            <TextBox x:Name="txtDonationID" Grid.Row="1" Grid.Column="2" IsReadOnly="True"/>

            <Label Grid.Row="2" Grid.Column="1" Content="Donation Date:" Style="{StaticResource LabelLeft}"/>
            <TextBox x:Name="txtDonationDate" Grid.Row="2" Grid.Column="2" IsReadOnly="True" />

            <Label Grid.Row="3" Grid.Column="1" Content="Donation Total:" Style="{StaticResource LabelLeft}"/>
            <TextBox Grid.Row="3" Grid.Column="2" x:Name="txtDonationTotal" IsReadOnly="True"/>

            <Label Grid.Row="4" Grid.Column="1" Content="Project ID:" VerticalAlignment="Center" Style="{StaticResource LabelLeft}"/>
            <TextBox Grid.Row="4" Grid.Column="2" x:Name="txtProjectID" IsReadOnly="True"/>

            <Label Grid.Row="5" Grid.Column="1" Content="Project Name:" Style="{StaticResource LabelLeft}"/>
            <TextBox Grid.Row="5" Grid.Column="2" x:Name="txtProjectName" IsReadOnly="True"/>

            <Label Grid.Row="6" Grid.Column="1" Content="Location:" Style="{StaticResource LabelLeft}"/>
            <TextBox Grid.Row="6" Grid.Column="2" x:Name="txtLocation" IsReadOnly="True"/>

            <Grid Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button x:Name="btnDownLoad" Grid.Column="0" Content="Download" Style="{StaticResource CallToActionSecondary}" Click="btnDownLoad_Click"/>
                <Button x:Name="btnBack" Grid.Column="2" Content="Back" Click="btnBack_Click" Style="{StaticResource BackButton}" />

            </Grid>

        </Grid>

    </Grid>
</Page>
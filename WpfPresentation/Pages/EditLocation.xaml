<Page x:Class="WpfPresentation.Pages.EditLocation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:WpfPresentation.Pages"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="700"
    Title="Edit Location">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lblHeader" Content="Edit Location" Grid.Column="1" Grid.Row="0"
               Grid.ColumnSpan="3" Style="{StaticResource TitleLabel}"/>
        <Label x:Name="lblLocationName" Grid.Column="1" Grid.Row="1" Style="{StaticResource LabelTop}" Content="Location Name"/>
        <TextBox x:Name="txtLocationName" Grid.Column="1" Grid.Row="2" TabIndex="0"/>

        <Label x:Name="lblAddress" Grid.Column="2" Grid.Row="1" Style="{StaticResource LabelTop}" Content="Street Address"/>
        <TextBox x:Name="txtAddress" Grid.Column="2" Grid.Row="2" TabIndex="1"/>

        <Label x:Name="lblCity" Grid.Column="1" Grid.Row="3" Style="{StaticResource LabelTop}" Content="City"/>
        <TextBox x:Name="txtCity" Grid.Column="1" Grid.Row="4" TabIndex="2"/>

        <Label x:Name="lblState" Grid.Column="2" Grid.Row="3" Style="{StaticResource LabelTop}" Content="State"/>
        <TextBox x:Name="txtState" Grid.Column="2" Grid.Row="4" TabIndex="3"/>

        <Label x:Name="lblZip" Grid.Column="1" Grid.Row="5" Style="{StaticResource LabelTop}" Content="ZIP Code"/>
        <TextBox x:Name="txtZip" Grid.Column="1" Grid.Row="6" TabIndex="4"/>

        <Label x:Name="lblCountry" Grid.Row="5" Grid.Column="2" Style="{StaticResource LabelTop}" Content="Country"/>
        <TextBox x:Name="txtCountry" Grid.Row="6" Grid.Column="2" TabIndex="5"/>

        <Label x:Name="lblDescription" Grid.Column="1" Grid.Row="7" Grid.ColumnSpan="2" Style="{StaticResource LabelTop}" Content="Description"/>
        <TextBox x:Name="txtDescription" Grid.Column="1" Grid.Row="8" Grid.ColumnSpan="3" TabIndex="6" Style="{StaticResource Description}"/>

        <Button x:Name="btnSubmit" Grid.Row="9" Grid.Column="1" Content="Submit" Style="{StaticResource CallToAction}" TabIndex="7" Click="btnSubmit_Click"/>
        <Button x:Name="btnDelete" Grid.Row="9" Grid.Column="2" Content="Delete" Style="{StaticResource DangerButton}" TabIndex="8" Click="btnDelete_Click"/>
        <Button x:Name="btnCancel" Grid.Row="9" Grid.Column="3" Content="Cancel" Style="{StaticResource WarningButton}" TabIndex="9" Click="btnCancel_Click"/>


        <Border BorderThickness="2" BorderBrush="#FF000000" Grid.Row="1" Grid.RowSpan="5" Grid.Column="3">
            <Image x:Name="imgLocation" Grid.Row="1" Grid.RowSpan="5" Grid.Column="3" Margin="10,10,10,10" Stretch="Uniform" StretchDirection="Both"/>
        </Border>
        <Button x:Name="btnChooseImage" Grid.Row="6" Grid.Column="3" Click="btnChooseImage_Click" Style="{StaticResource CallToActionSecondary}">Choose Image</Button>
    </Grid>
</Page>

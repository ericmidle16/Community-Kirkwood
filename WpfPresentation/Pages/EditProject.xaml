<Page x:Class="WpfPresentation.Pages.EditProject"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPresentation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="700"
      Title="EditProject">

    <Grid x:Name="EditPge" Margin="0,-2,0,2">
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition/>
        </Grid.RowDefinitions >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Update Project" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="4" Style="{StaticResource TitleLabel}"/>

        <Label x:Name="lblProjectName" Grid.Row="1" Grid.Column="1" Content="Project Name:" Style="{StaticResource LabelTop}"/>
        <TextBox x:Name="txtProjectName" IsEnabled="False" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4" Style="{StaticResource TextBottom}"/>

        <Label Grid.Row="3" Grid.Column="1"  Content="Type:" Style="{StaticResource LabelTop}"/>
        <TextBox x:Name="txtProjectType" IsEnabled="False" Grid.Row="4" Grid.Column="1" Visibility="Visible" Style="{StaticResource TextBottom}"/>

        <Label Grid.Row="3" Grid.Column="2" Content="Status:" Style="{StaticResource LabelTop}"/>
        <ComboBox x:Name="cbStatus" Grid.Row="4" Grid.Column="2" Style="{StaticResource ComboUnder}">
            <ComboBoxItem Content="Not Started" />
            <ComboBoxItem Content="In Progress" />
            <ComboBoxItem Content="Completed" />
        </ComboBox>

        <Label Grid.Row="3" Grid.Column="3" Content="Start Date:" Style="{StaticResource LabelTop}"/>
        <DatePicker x:Name="dtpStartDate" IsEnabled="False" Grid.Row="4" Grid.Column="3" Grid.ColumnSpan="2" Style="{StaticResource DateUnder}"/>

        <Label Grid.Row="5" Grid.Column="1"  Content="Project Starter:" Style="{StaticResource LabelTop}" Margin="10,0,0,2"/>
        <TextBox x:Name="txtUser" IsEnabled="False" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource TextBottom}"/>



        <Label Grid.Row="7" Grid.Column="1" Content="Location:" Style="{StaticResource LabelTop}" Margin="2,0,0,30" Grid.RowSpan="2"/>
        <ComboBox x:Name="cbxLocationName"
          Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="4"
          Style="{StaticResource ComboUnder}" />

        <CheckBox x:Name="ckbAcceptsDonation" Grid.Row="5" Grid.Column="4" Content="Accepts Donations" IsEnabled="True" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource CheckBoxBottom}" Click="ckbAcceptsDonation_Click"/>
        <Label x:Name="lblPayPalAccount" Grid.Row="5" Grid.Column="3" Content="Paypal Account:" Style="{StaticResource LabelTop}"/>
        <TextBox x:Name="tbxPayPalAccount" Grid.Row="6" Grid.Column="3" Grid.ColumnSpan="2" Style="{StaticResource TextBottom}"/>

        <Label Grid.Row="9" Grid.Column="1" Content="Description:" Style="{StaticResource LabelTop}"/>
        <Label x:Name="lblTextBoxCharDisplay" Grid.Row="9" Content="0/250" Grid.Column="4" Style="{StaticResource SmallTitleLabel}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,0"/>
        <TextBox x:Name="txtDescription" Grid.Row="10" Grid.Column="1" Grid.ColumnSpan="4" Grid.RowSpan="2" Style="{StaticResource Description}" TextChanged="txtDescription_TextChanged"/>

        <Grid Grid.Row="12" Grid.Column="1" Grid.ColumnSpan="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btnConfirm" Grid.Column="0" Content="Confirm" Click="btnConfirm_Click" Style="{StaticResource CallToAction}"/>
            <Button x:Name="btnCancel" Grid.Column="1" Content="Cancel" Click="btnCancel_Click" IsCancel="True" Style="{StaticResource WarningButton}"/>
        </Grid>

    </Grid>
</Page>

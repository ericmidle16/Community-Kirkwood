    <Page x:Class="WpfPresentation.Pages.LogInDesktop"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPresentation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="700"
      Title="LogIn">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2.5*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Login" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource TitleLabel}"/>


        <Label x:Name="lblUsername" Content="Email Address" Grid.Row="1" Grid.Column="1" Style="{StaticResource LabelTop}"/>
        
        <TextBox x:Name="tbxUsername" Grid.Row="2" Grid.Column="1" Style="{StaticResource TextBottom}" Grid.ColumnSpan="2"/>
        <PasswordBox x:Name="tbxPassword" Grid.Row="4" Grid.Column="1" Style="{StaticResource PasswordBottom}" Grid.ColumnSpan="2"/>

        <Button x:Name="btnLogIn" Content="Log In" Grid.Column="1" Grid.Row="6" Click="btnLogIn_Click" Style="{StaticResource CallToAction}"/>
        <Button x:Name="btnCancel" Content="Cancel" Grid.Column="2" Grid.Row="6" Style="{StaticResource WarningButton}" Click="btnCancel_Click"/>
        <Button x:Name="btnCreateAnAccount" Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource LinkButton}" Click="btnCreateAnAccount_Click">
            <TextBlock TextDecorations="Underline">Create a New Account</TextBlock>
        </Button>
        
        <!-- Placeholder text for email field -->
        <TextBlock x:Name="lblUsernamePlaceholderText" IsHitTestVisible="False" Text="Email Address" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="1" Margin="15,0,0,0" Foreground="DarkGray">
            <TextBlock.Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Text, ElementName=tbxUsername}" Value="">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <!-- end placegolder text -->
        
        
        
        <!--
        <Button x:Name="btnForgotUsername" Grid.Row="2" Grid.Column="2" Style="{StaticResource LinkButton}" Click="btnForgotUsername_Click">
            <TextBlock TextDecorations="Underline">Forgot Email</TextBlock>
        </Button>
        -->

        <Label x:Name="lblPassword" Content="Password" Grid.Row="3" Grid.Column="1" Style="{StaticResource LabelTop}"/>

        <!--
        <Button x:Name="btnForgotPassword" Grid.Row="4" Grid.Column="2" Style="{StaticResource LinkButton}" Click="btnForgotPassword_Click">
            <TextBlock TextDecorations="Underline">Forgot Password</TextBlock>
        </Button>
        -->

        
        
        
    </Grid>

</Page>

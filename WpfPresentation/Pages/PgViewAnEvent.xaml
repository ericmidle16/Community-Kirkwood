<Page x:Class="WpfPresentation.Pages.PgViewAnEvent"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPresentation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="700"
      Title="PgViewAnEvent">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="7.5*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height=".75*"/>
            <RowDefinition />
            <RowDefinition Height="2.25*"/>
        </Grid.RowDefinitions>


        <Label x:Name="lblEvent" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2" Style="{StaticResource TitleLabel}">View An Event</Label>
        
        <Label Grid.Row="1" Style="{StaticResource LabelLeft}" Grid.Column="1">Date Created</Label>
        <DatePicker Grid.Column="2" Grid.Row="1" x:Name="dpDateCreated" IsEnabled="False"/>

        <Label Grid.Row="2" Style="{StaticResource LabelLeft}" Grid.Column="1">Start Date</Label>
        <DatePicker Grid.Column="2" Grid.Row="2" x:Name="dpStartDate" IsEnabled="False"/>

        <Label Grid.Row="3" Style="{StaticResource LabelLeft}" Grid.Column="1">End Date</Label>
        <DatePicker Grid.Column="2" Grid.Row="3" x:Name="dpEndDate" IsEnabled="False"/>


        <Label Grid.Row="4" Style="{StaticResource LabelLeft}" Grid.Column="1">Event Type</Label>
        <TextBox Grid.Column="2" Grid.Row="4" Name="txtEventTypeID" ToolTip="This item is assigned by the system." IsEnabled="False"/>

<!--
        <Label Grid.Row="5" Style="{StaticResource LabelLeft}" Grid.Column="1">Location ID</Label>
        <TextBox Grid.Column="2" Grid.Row="5" Name="txtLocationID" ToolTip="This item is assigned by the system."/>
-->

        <Label Grid.Row="5" Style="{StaticResource LabelLeft}" Grid.Column="1">Volunteers Needed</Label>
        <TextBox Grid.Column="2" Grid.Row="5" Name="txtVolunteersNeeded" IsEnabled="False"/>

<!--
        <Label Grid.Row="7" Style="{StaticResource LabelLeft}" Grid.Column="1">User ID</Label>
        <TextBox Grid.Column="2" Grid.Row="7" Name="txtUserID" ToolTip="This item is assigned by the system."/>
-->

        <Label Grid.Row="6" Style="{StaticResource LabelLeft}" Grid.Column="1">Notes</Label>
        <TextBox Grid.Column="2" Grid.RowSpan="2" Grid.Row="6" Name="txtNotes" IsEnabled="False"/>


        <Label Grid.Row="7" Style="{StaticResource LabelTop}" Grid.Column="1">Description</Label>
        <TextBox Grid.Column="1" Grid.Row="8" Grid.ColumnSpan="2" Style="{StaticResource Description}" Name="txtDescription" IsEnabled="False"/>



        <Grid Grid.Row="11" Grid.Column="1" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button x:Name="btnViewProject" Grid.Column="0" Grid.Row="0" Content="View Project" Style="{StaticResource CallToActionSecondary}" Click="btnViewProject_Click"/>
            <Button x:Name="btnViewVolunteers" Grid.Column="1" Grid.Row="0" Content="View Volunteers" Style="{StaticResource CallToActionSecondary}" Click="btnViewVolunteers_Click"/>
            <Button x:Name="btnViewTasks" Grid.Column="2" Grid.Row="0" Content="View Tasks" Style="{StaticResource CallToActionSecondary}" Click="btnViewTasks_Click"/>
            <Button x:Name="btnEditEvent" Grid.Column="0" Grid.Row="1" Content="Edit Event" Style="{StaticResource WarningButton}" Click="btnEditEvent_Click"/>
            <Button x:Name="btnDeleteEvent" Grid.Column="1" Grid.Row="1" Content="Delete Event" Style="{StaticResource DangerButton}" Click="btnDeleteEvent_Click"/>
            <Button Grid.Row="1" Grid.Column="2" Style="{StaticResource BackButton}" Name="btnCancel" Click="btnCancel_Click">Back</Button>


        </Grid>




    </Grid>
</Page>

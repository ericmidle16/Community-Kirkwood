<Page x:Class="WpfPresentation.Pages.SubmitInvoice"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPresentation.Pages" xmlns:sys="clr-namespace:System;assembly=mscorlib"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="700"
      Title="SubmitInvoice" Loaded="Page_Loaded" >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="58*"/>
            <ColumnDefinition Width="292*"/>
            <ColumnDefinition Width="125*"/>
            <ColumnDefinition Width="166*"/>
            <ColumnDefinition Width="58*"/>
            <ColumnDefinition Width="1"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lblTitle" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Content="Submit Invoice" Style="{StaticResource TitleLabel}" HorizontalAlignment="Left" Margin="203,0,0,0"/>
        <Label Content="Invoice Number" Grid.Row="2" Grid.Column="1" Style="{StaticResource LabelLeft}" HorizontalAlignment="Left" Margin="172,0,0,0"/>
        <TextBox x:Name="txtInvoiceNumber" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" Margin="10,10,10,10"/>
        <Label Content="Invoice Status" Grid.Row="3" Grid.Column="1" Style="{StaticResource LabelLeft}" HorizontalAlignment="Left" Margin="185,0,0,0"/>
        <ComboBox x:Name="txtInvoiceStatus" Grid.Column="2" Grid.Row="3" Grid.ColumnSpan="2" Margin="10,10,10,10">
            <ComboBoxItem Content="Pending" />
            <ComboBoxItem Content="Paid" />
            <ComboBoxItem Content="Processed" />
        </ComboBox>

        <Label Content="Invoice Date" Grid.Row="4" Grid.Column="1" Style="{StaticResource LabelLeft}" HorizontalAlignment="Left" Margin="195,0,0,0"/>
        <DatePicker x:Name="InvoiceDate" Grid.Row="4" Grid.Column="2" DisplayDateEnd="{x:Static sys:DateTime.Now}" Grid.ColumnSpan="2" Margin="10,10,10,10"/>
        <Label Content="Invoice Description" Grid.Row="5" Grid.Column="1" Style="{StaticResource LabelTop}"/>
        <TextBox x:Name="txtInvoiceDescription" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="3" Style="{StaticResource Description}" Margin="10,64,10,0" Grid.RowSpan="2"/>
        <Button x:Name="btnSubmit" Grid.Row="7" Grid.Column="1" Content="Submit" Style="{StaticResource CallToAction}" Click="btnSubit_Click" Margin="10,10,10,10"/>
        <Button x:Name="btnCancel" Grid.Row="7" Grid.Column="2" Content="Cancel" Style="{StaticResource WarningButton}" Click="btnCancel_Click" Grid.ColumnSpan="2" Margin="10,10,10,10"/>

        <Label Grid.Column="1" Content="ExpenseID" Style="{StaticResource LabelLeft}" Grid.Row="1"/>
        <TextBox x:Name="txtExpenseId" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2"/>
        <!--<ComboBox x:Name="txtExpenseId" Grid.Column="2" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="30,20,10,0" Grid.Row="1" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="Paid" />
        </ComboBox>-->

    </Grid>
</Page>
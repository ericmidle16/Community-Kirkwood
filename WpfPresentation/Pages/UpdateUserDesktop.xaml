<Page x:Class="WpfPresentation.Pages.UpdateUserDesktop"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPresentation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="700"
      Title="UpdateUser">
    <Grid>

        <!-- Main Grid Define Start -->
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <!-- Main Grid Define End -->

        <Label x:Name="lblUpdateProfile" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" Style="{StaticResource TitleLabel}" Content="Edit Profile"/>

        <Label x:Name="lblFirstName" Content="Given Name (First Name):" Grid.Row="1" Grid.Column="1" Style="{StaticResource LabelTop}"/>
        <TextBox x:Name="tbxFirstName" VerticalContentAlignment="Center" Grid.Row="2" Grid.Column="1" MaxLength="50" Style="{StaticResource TextBottom}"/>

        <Label x:Name="lblLastName" Content="Family Name (Last Name):" Grid.Row="1" Grid.Column="2" Style="{StaticResource LabelTop}"/>
        <TextBox x:Name="tbxLastName" VerticalContentAlignment="Center" Grid.Row="2" Grid.Column="2" MaxLength="50" Style="{StaticResource TextBottom}"/>

        <Label x:Name="lblEmail" Content="Email:" Grid.Column="1" Grid.Row="3" Style="{StaticResource LabelTop}"/>
        <TextBox x:Name="tbxEmail" VerticalContentAlignment="Center" MaxLength="250" Grid.Column="1" Grid.Row="4" Style="{StaticResource TextBottom}"/>
        
        <Label x:Name="lblPhoneNumber" Content="Phone Number:" Grid.Row="3" Grid.Column="2" Style="{StaticResource LabelTop}"/>
        <TextBox x:Name="tbxPhoneNumber" Grid.Row="4" Grid.Column="2" MaxLength="13" Style="{StaticResource TextBottom}"/>

        <Label x:Name="lblCity" Content="City:" Grid.Row="5" Grid.Column="1" Style="{StaticResource LabelTop}"/>
        <TextBox x:Name="tbxCity" Grid.Row="6" Grid.Column="1" MaxLength="50" Style="{StaticResource TextBottom}"/>

        <Label x:Name="lblState" Content="State:" Grid.Row="5" Grid.Column="2" Style="{StaticResource LabelTop}"/>
        <ComboBox x:Name="cbxState" Grid.Column="2" Grid.Row="6" Style="{StaticResource ComboUnder}"/>

        <Label x:Name="lblAboutMe" Content="About Me:" Grid.Column="1" Grid.Row="7" Style="{StaticResource LabelTop}"/>
        <Label x:Name="lblTextBoxCharDisplay" Grid.Row="7" Grid.Column="2" Style="{StaticResource SmallTitleLabel}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,0"/>
        <TextBox x:Name="tbxAboutMe" Grid.Column="1" Grid.Row="8" Grid.RowSpan="2" MaxLength="250" Grid.ColumnSpan="2" TextChanged="tbxAboutMe_TextChanged" Style="{StaticResource Description}"/>

        <Rectangle StrokeThickness="2"      Grid.Row="1" Grid.Column="3" Width="180" Height="180" Grid.RowSpan="7" Stroke="Black" />
        <Image x:Name="imgUserProfileImage" Grid.Row="1" Grid.Column="3" Width="175" Height="175" Grid.RowSpan="7" />
        <Button x:Name="btnChooseImage" Content="Choose Image" Grid.Column="3" Grid.Row="8" Click="btnSelectImage_Click" Style="{StaticResource CallToActionSecondary}"/>

        <Button x:Name="btnSave" Content="Save" Grid.Row="10" Grid.Column="1" Style="{StaticResource CallToAction}" Click="btnSaveButton_Click"/>
        <Button x:Name="btnDeactivate" Content="Delete Account" Grid.Row="10" Grid.Column="2" Style="{StaticResource DangerButton}" Click="btnDeactivate_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" Grid.Row="10" Grid.Column="3" Style="{StaticResource WarningButton}" Click="btnCancelButton_Click"/>


    </Grid>
</Page>

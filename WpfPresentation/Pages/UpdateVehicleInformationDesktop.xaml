<Page x:Class="WpfPresentation.Pages.UpdateVehicleInformationDesktop"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPresentation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="700"
      Title="UpdateVehicleInformationDesktop"
      Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1.5*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="3.33*"></ColumnDefinition>
            <ColumnDefinition Width="3.33*"></ColumnDefinition>
            <ColumnDefinition Width="3.33*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Label x:Name="lblUpdateVehicle" Content="Update Vehicle Information" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" Style="{StaticResource TitleLabel}"/>

        <Label Grid.Row="1" Grid.Column="1" Style="{StaticResource LabelTop}">Make</Label>
        <TextBox x:Name="txtMake" Grid.Row="2" Grid.Column="1" Style="{StaticResource TextBottom}"/>

        <Label Grid.Row="3" Grid.Column="1" Style="{StaticResource LabelTop}">Model</Label>
        <TextBox x:Name="txtModel" Grid.Row="4" Grid.Column="1" MaxLength="50" Style="{StaticResource TextBottom}"/>

        <Label Grid.Row="5" Grid.Column="1" Style="{StaticResource LabelTop}">Year</Label>
        <TextBox x:Name="txtYear" Grid.Row="6" Grid.Column="1" Style="{StaticResource TextBottom}"/>






        <Label Grid.Row="1" Grid.Column="2" Style="{StaticResource LabelTop}">Number of Seats</Label>
        <TextBox x:Name="txtNumberOfSeats" Grid.Row="2" Grid.Column="2" Style="{StaticResource TextBottom}"/>


        <Label Grid.Row="3" Grid.Column="2" Style="{StaticResource LabelTop}">License Plate Number</Label>
        <TextBox x:Name="txtLicensePlate" Grid.Row="4" Grid.Column="2" MaxLength="7" Style="{StaticResource TextBottom}"/>

        <Label Grid.Row="5" Grid.Column="2" Style="{StaticResource LabelTop}">Color</Label>
        <TextBox x:Name="txtColor" Grid.Row="6" Grid.Column="2" Style="{StaticResource TextBottom}" MaxLength="20"/>

        <Label Grid.Row="1" Grid.Column="3" Style="{StaticResource LabelTop}">What can it transport?</Label>
        <TextBox x:Name="txtTransportUtility" Grid.Row="2" Grid.Column="3" Grid.RowSpan="5" MaxLength="500" Style="{StaticResource Description}"/>


        <CheckBox x:Name="chkActive" Content="Are you willing to drive this vehicle currently?" 
                  Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2" Margin="10"
                  FontWeight="Bold" FontSize="14" />

        <CheckBox x:Name="chkInsuranceStatus" Content="Is this vehicle insured?" 
                  Grid.Row="7" Grid.Column="3" Margin="10"
                  FontWeight="Bold" FontSize="14"/>

        <Button x:Name="btnSubmit" Content="Update Vehicle" Grid.Row="9" Grid.Column="1" Click="btnSubmit_Click" Style="{StaticResource CallToAction}"/>
        <Button x:Name="btnCancel" Content="Cancel" Grid.Column="3" Grid.Row="9" Click="btnCancel_Click" Style="{StaticResource WarningButton}"/>
    </Grid>
</Page>
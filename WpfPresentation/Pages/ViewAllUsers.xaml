    <Page x:Class="WpfPresentation.frmViewAllUsers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPresentation"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="700"
      Title="ViewAllUsers">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        
        <Label x:Name="lblUsers" Content="Users" Grid.Row="0" Grid.Column="1" Style="{StaticResource TitleLabel}"/>
        
        <DataGrid Grid.Row="1" Grid.Column="1" x:Name="grdUserList" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Given Name" Binding="{Binding GivenName}" Width="*"/>
                <DataGridTextColumn Header="Family Name" Binding="{Binding FamilyName}" Width="*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                <DataGridTextColumn Header="Phone" Binding="{Binding PhoneNumber}" Width="*"/>
                <DataGridTextColumn Header="Suspended" Binding="{Binding Suspended}" Width="70"/>
                <DataGridTextColumn Header="ReadOnly" Binding="{Binding ReadOnly}" Width="60"/>
                <DataGridTextColumn Header="Active" Binding="{Binding Active}" Width="45"/>
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Row="2" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Grid.Row="0" x:Name="btnView" Grid.Column="0" Content="View User" Style="{StaticResource CallToActionSecondary}" Click="btnView_Click" />
            <Button Grid.Row="0" x:Name="btnProfile" Grid.Column="1" Content="View Profile" Style="{StaticResource CallToActionSecondary}" Click="btnProfile_Click"/>
            <Button Grid.Row="0" Grid.Column="2" x:Name="btnBack" Content="Back" Style="{StaticResource BackButton}" Click="btnBack_Click"/>

            <!--
            <Button x:Name="btnSave" Content="Save" VerticalAlignment="Center" HorizontalAlignment="Center" Background="Green" Grid.Column="1"
                Padding="15 5 15 5" FontWeight="Bold" FontSize="15">

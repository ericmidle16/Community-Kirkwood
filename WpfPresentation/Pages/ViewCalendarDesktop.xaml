<Page x:Class="WpfPresentation.Pages.ViewCalendarDesktop"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPresentation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewCalendarDesktop">

    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" HorizontalAlignment="Center" Margin="10">
            <Button Name="PreviousMonth" Content="&lt;" Width="50" Click="PreviousMonth_Click" Style="{StaticResource CallToActionSecondary}"/>
            <Label Name="MonthYearLabel" FontSize="16" Margin="10,0" Width="150" HorizontalContentAlignment="Center" />
            <Button Name="NextMonth" Content="&gt;" Width="50" Click="NextMonth_Click" Style="{StaticResource CallToActionSecondary}"/>
        </StackPanel>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Sidebar -->
            <StackPanel Margin="10">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <StackPanel Orientation="Vertical" DockPanel.Dock="Top" HorizontalAlignment="Center" Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal" Margin="10,0">
                        <Ellipse Width="10" Height="10" Fill="Blue" Margin="0,0,5,0"/>
                        <TextBlock Text="Project" Margin="0,0,15,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10,0">
                        <Ellipse Width="10" Height="10" Fill="Green" Margin="0,0,5,0"/>
                        <TextBlock Text="Project Task" Margin="0,0,15,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" DockPanel.Dock="Top" HorizontalAlignment="Center" Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal" Margin="10,0">
                            <Ellipse Width="10" Height="10" Fill="Orange" Margin="0,0,5,0"/>
                            <TextBlock Text="Event" Margin="0,0,15,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="10,0">
                            <Ellipse Width="10" Height="10" Fill="Yellow" Stroke="Gray" StrokeThickness="0.5" Margin="0,0,5,0"/>
                            <TextBlock Text="Event Task" Margin="0,0,15,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                <DataGrid x:Name="EventDataGrid"
                          Height="200"
                          HeadersVisibility="Column"
                          AutoGenerateColumns="False"
                          SelectionMode="Single"
                          IsReadOnly="True"
                          CanUserReorderColumns="False"
                          SelectionUnit="FullRow">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="2*">
                            <DataGridTextColumn.ElementStyle>
                                <Style>
                                    <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                                    <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                                    <Setter Property="TextBlock.VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Time" Binding="{Binding Time}" Width="1.5*">
                            <DataGridTextColumn.ElementStyle>
                                <Style>
                                    <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                                    <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                                    <Setter Property="TextBlock.VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="1*">
                            <DataGridTextColumn.ElementStyle>
                                <Style>
                                    <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
                                    <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                                    <Setter Property="TextBlock.VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>


                <Button x:Name="btnViewScheduledObject" Content="View" Margin="0,10,0,0" Click="btnViewScheduledObject_Click" Style="{StaticResource CallToActionSecondary}"/>
            </StackPanel>

            <!-- Main Calendar -->
            <Grid Grid.Column="1" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <UniformGrid Grid.Row="0" Columns="7">
                    <TextBlock Text="Sunday" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="Monday" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="Tuesday" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="Wednesday" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="Thursday" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="Friday" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock Text="Saturday" FontWeight="Bold" HorizontalAlignment="Center"/>
                </UniformGrid>

                <UniformGrid Grid.Row="1" Columns="7" Rows="6" x:Name="DaysGridControl">
                    <!-- Days will be dynamically added here -->
                </UniformGrid>
            </Grid>
        </Grid>
    </DockPanel>
</Page>

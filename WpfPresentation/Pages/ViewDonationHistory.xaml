<Page x:Class="WpfPresentation.Pages.ViewDonationHistory"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPresentation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="700"
      Title="ViewDonationHistory">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label Content="Donation History" Style="{StaticResource TitleLabel}"/>
        <Grid Grid.Row="1" Margin="0,10,00,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <DatePicker x:Name="StartDate" Grid.Column="0" Style="{StaticResource DateUnder}"/>
            <DatePicker x:Name="EndDate" Grid.Column="1" Style="{StaticResource DateUnder}"/>
            <TextBox x:Name="txtMinAmount" Grid.Column="2" Style="{StaticResource TextBottom}"
                     Text="Min Amount" GotFocus="ClearTextBox" LostFocus="RestorePlaceholder"/>
            <TextBox x:Name="txtMaxAmount" Grid.Column="3" Style="{StaticResource TextBottom}"
                     Text="Max Amount" GotFocus="ClearTextBox" LostFocus="RestorePlaceholder"/>
            <Button Content="Filter" Grid.Column="4" Margin="10,0,10,0" Click="FilterButton_Click" Style="{StaticResource CallToActionSecondary}"/>
        </Grid>
        <ListView x:Name="lstView" Grid.Row="2" Margin="10" Loaded="lstView_Loaded" MouseDoubleClick="lstView_MouseDoubleClick">
            <ListView.View>
                <GridView >
                    <GridViewColumn Header="Donation Type" DisplayMemberBinding="{Binding DonationType}" Width="140"/>
                    <GridViewColumn Header="Project Name" DisplayMemberBinding="{Binding Name}" Width="140"/>
                    <GridViewColumn Header="Amount" DisplayMemberBinding="{Binding Amount}" Width="140"/>
                    <GridViewColumn Header="Date" DisplayMemberBinding="{Binding DonationDate, StringFormat='MM-dd-yyyy'}" Width="140"/>
                    <GridViewColumn Header="Description" DisplayMemberBinding="{Binding Description}" Width="140"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0"  x:Name="btnSummary" Click="btnSummary_Click" Content="Donation Summary" Style="{StaticResource CallToActionSecondary}"/>
            <Button Grid.Column="1" x:Name="btnView" Content="View Details" Style="{StaticResource CallToActionSecondary}" Click="btnView_Click"/>
            <Button Grid.Column="2" x:Name="btnBack" Click="btnBack_Click" Content="Back" Style="{StaticResource BackButton}"/>
        </Grid>
        <TextBlock x:Name="tbNoDonationHistory" Grid.Row="2" Text="No donation made"  Foreground="Red" FontSize="16" HorizontalAlignment="Center" 
                    VerticalAlignment="Center" Visibility="Collapsed" Background="AliceBlue"/>
    </Grid>
</Page>
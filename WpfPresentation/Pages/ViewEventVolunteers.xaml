    <Page x:Class="WpfPresentation.Pages.ViewEventVolunteers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPresentation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="700"
      Title="ViewEventVolunteers">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
            
        <Label x:Name="lblViewEventVolunteers" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="4" Style="{StaticResource TitleLabel}">Volunteers Assigned to Event</Label>

        <DataGrid x:Name="gridVolunteersAndTasksByEventID" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4" IsReadOnly="True" SelectionMode="Single" Loaded="gridVolunteersAndTasksByEventID_Loaded" ></DataGrid>


        <Button x:Name="btnViewAllTasks" Grid.Row="2" Grid.Column="1" Content="View All Tasks" Style="{StaticResource CallToActionSecondary}" Click="btnViewAllTasks_Click" />
        <!-- <Button x:Name="btnUnassign" Grid.Row="2" Grid.Column="2" Content="Unassign" Style="{StaticResource DangerButton}" Click="btnUnassign_Click"/> -->
        <!-- <Button x:Name="btnEditTask" Grid.Row="2" Grid.Column="3" Content="Change Task" Style="{StaticResource WarningButton}" Click="btnEditTask_Click"/> -->


       <Button x:Name="btnViewUnassignedVolunteers" Grid.Row="2" Grid.Column="2" Content="Assign Volunteers" Style="{StaticResource CallToAction}" Click="btnViewUnassignedVolunteers_Click" />
        <Button x:Name="btnRequest" Grid.Row="2" Grid.Column="3" Content="Request Volunteer" Style="{StaticResource CallToAction}" Click="btnRequest_Click"/>



        <Button x:Name="btnBackViewEventVolunteerList" Grid.Row="2" Grid.Column="4" Content="Back" Style="{StaticResource BackButton}" Click="btnBackViewEventVolunteerList_Click"/>

        
        
    </Grid>
</Page>

<!--
    /// <summary>
    /// Creator: Nikolas Bell
    /// Created: 2025/03/14
    /// Summary: This page displays forum posts within a ListBox, where each post 
    /// is presented with the author's name, content, date, and action buttons.
    /// Last Updated By: Skyann Heintz
    /// Last Updated:2025-03-31
    /// What was Changed: Added a double click method to the listbox a textbox to edit
    // content and a enter button to submit the content after editing.
    ///
    /// Last Updated By: Syler Bushlack
    /// Last Updated:2025-04-23
    /// What was Changed: Added DataTemplate Trigger so tblPin's text changed from Pin to Unpin and vice versa
    /// after a post is pinned/unpined
    /// </summary>
-->
<Page x:Class="WpfPresentation.Pages.ViewForumPosts"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPresentation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="700"
      Title="ViewForumPosts">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.1*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.1*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lblThreadName" Grid.Column="1" Content="Thread Name" Style="{StaticResource TitleLabel}"/>

        <ListBox Grid.Row="1" Grid.Column="1" ItemsSource="{Binding Posts}" Margin="10" MouseDoubleClick="ListBox_MouseDoubleClick">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="1" Padding="10" Margin="5" CornerRadius="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.5*"/>
                                <!-- User Full Name -->
                                <ColumnDefinition Width="*"/>
                                <!-- Post Content -->
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <!-- Content -->
                                <RowDefinition Height="Auto"/>
                                <!-- Action Buttons -->
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- User Full Name (Left Side) -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding FullName}" FontWeight="Bold"
                       VerticalAlignment="Top" Margin="5"/>

                            <!-- Content (Right Side) -->
                            <Border Grid.Row="0" Grid.Column="1" BorderThickness="1" Padding="5" Margin="5"
                    BorderBrush="Gray" Background="White">
                                <TextBlock Text="{Binding Content}" Tag="{Binding PostID}"  TextWrapping="Wrap"
                           HorizontalAlignment="Right" TextAlignment="Justify" 
                           Width="700"/>
                            </Border>

                            <!-- Buttons (Bottom Right) -->
                            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock x:Name="tblPin" Text="Pin" FontSize="12" Margin="5" Cursor="Hand" MouseLeftButtonDown="tblPin_MouseLeftButtonDown"/>
                                <TextBlock x:Name="tblDelete" Text="Delete" FontSize="12" Margin="5" Cursor="Hand" MouseLeftButtonDown="tblDelete_MouseLeftButtonDown"/>
                            </StackPanel>

                            <!-- Date (Bottom Left) -->
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="{Binding DatePosted, StringFormat=d}" 
                       VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="5"/>
                        </Grid>
                    </Border>
                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding Pinned}" Value="True">
                            <Setter TargetName="tblPin" Property="Text" Value="Unpin"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Pinned}" Value="False">
                            <Setter TargetName="tblPin" Property="Text" Value="Pin"/>
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>


            </ListBox.ItemTemplate>
        </ListBox>
        <!-- Edit text box -->
        <TextBox x:Name="tbContent" Grid.Row="2" Grid.Column="1" VerticalAlignment="Bottom" 
         HorizontalAlignment="Stretch" Height="40" Margin="10,10,50,10" KeyDown="tbContent_KeyDown" 
         Visibility="Collapsed"/>
        <Button x:Name="EnterButton" Grid.Row="2" Grid.Column="1" Content="Enter" VerticalAlignment="Bottom" 
        HorizontalAlignment="Right" Height="40" Width="60" Margin="10,10,0,10" 
        Click="EnterButton_Click" Visibility="Collapsed" Style="{StaticResource CallToAction}"/>
        <!-- Reply -->
        
        
        
        <Button x:Name="btnReply" Grid.Row="1"  Grid.Column="2" Content="Reply" Click="btnReply_Click" Style="{StaticResource CallToAction}"/>
        <Button x:Name="btnBack" Grid.Row="2"  Grid.Column="2" Content="Back" Click="btnBack_Click" Style="{StaticResource BackButton}"/>
    </Grid>
</Page>
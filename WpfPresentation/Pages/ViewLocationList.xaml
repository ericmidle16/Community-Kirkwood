<Page x:Class="WpfPresentation.Pages.ViewLocationList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPresentation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="700"
      Title="ViewLocationList">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" Grid.Column="1">
            <Label x:Name="lblLocations" Style="{StaticResource TitleLabel}" Content="Locations"/>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="1">
            <DataGrid x:Name="gridLocations" Loaded="gridLocations_Loaded"/>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="1">
            
            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Button Grid.Row="0" Grid.Column="0" x:Name="btnViewLocation" Content="View Location" Style="{StaticResource CallToActionSecondary}" Click="btnViewLocation_Click" />
                <Button Grid.Row="0" Grid.Column="1" x:Name="btnCreateLocation" Content="Add Location" Style="{StaticResource CallToAction}" Click="btnCreateLocation_Click" />
                <Button Grid.Row="0" Grid.Column="2" x:Name="btnEditLocation" Content="Edit Location" Style="{StaticResource WarningButton}" Click="btnEditLocation_Click"/>
                <Button Grid.Row="0" Grid.Column="3" x:Name="btnBack" Content="Back" Style="{StaticResource BackButton}" Click="btnBack_Click"/>
            </Grid>
        </Grid>
    </Grid>
</Page>

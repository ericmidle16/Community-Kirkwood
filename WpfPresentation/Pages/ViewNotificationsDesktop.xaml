<Page x:Class="WpfPresentation.Pages.ViewNotificationsDesktop"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="700"
      Title="ViewNotificationsDesktop">

    <Grid>
        <!-- Row 0: Search & Filter; Row 1: Notifications List -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="400"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="650"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Search & Filter Panel moved to the top -->
        <Grid Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="txtSearch"
                     Grid.Column="0"
                     VerticalAlignment="Center"
                     MinHeight="25"
                     ToolTip="Enter keyword to search in Name or Content"/>

            <Button x:Name="btnSearch"
                    Grid.Column="1"
                    Click="btnSearch_Click"
                    Style="{StaticResource CallToAction}"
                    Content="Search">
            </Button>

            <Button x:Name="btnFilter"
                    Grid.Column="2"
                    Click="btnFilter_Click"
                    Content="Show Unviewed"
                    Style="{StaticResource CallToActionSecondary}"/>
        </Grid>

        <!-- Notifications List -->
        <ListBox x:Name="lbxNotifications"
                 Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"
                 HorizontalAlignment="Center"
                 HorizontalContentAlignment="Center"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 ScrollViewer.CanContentScroll="False"
                 MinWidth="700"
                 MaxHeight="450">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="2"
                            BorderBrush="Black"
                            Padding="10"
                            CornerRadius="5"
                            MinWidth="450">
                        <Grid>
                            <!-- Four rows: Title, Sender, Content, Actions -->
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <!-- Three columns: Icons, Main, Date/Actions -->
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Icons (Important + Viewed) -->
                            <StackPanel Grid.Row="0" Grid.Column="0"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        Margin="0,0,8,0">
                                <!-- Important Icon -->
                                <TextBlock Text="⚠"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="Red"
                                           Margin="0,0,5,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Important}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <!-- Viewed Icon -->
                                <TextBlock Text="👁"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="Gray">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsViewed}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>

                            <!-- Notification Title -->
                            <TextBlock Grid.Row="0" Grid.Column="1"
                                       Text="{Binding Name}"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>

                            <!-- Date Sent -->
                            <TextBlock Grid.Row="0" Grid.Column="2"
                                       Text="{Binding DisplayDateString}"
                                       FontStyle="Italic"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"/>

                            <!-- Sender Full Name -->
                            <TextBlock Grid.Row="1" Grid.Column="1"
                                       Text="{Binding FullSenderName}"
                                       FontWeight="Bold"
                                       Margin="0,4,0,0"/>

                            <!-- Content -->
                            <TextBlock Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"
                                       Text="{Binding Content}"
                                       TextWrapping="Wrap"
                                       MaxWidth="450"
                                       Margin="0,6,0,0"/>

                            <!-- View/Viewed Button -->
                            <Button Grid.Row="3" Grid.Column="2"
                                    x:Name="btnViewed"
                                    Click="btnViewed_Click"
                                    Padding="6,4"
                                    Background="LightGreen"
                                    HorizontalAlignment="Right"
                                    Margin="0,8,0,0">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Content" Value="✔ View"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsViewed}" Value="True">
                                                <Setter Property="Content" Value="✔ Viewed"/>
                                                <Setter Property="IsEnabled" Value="False"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Empty state text -->
        <TextBlock x:Name="txtEmpty"
                   Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"
                   Text="All Caught up!"
                   FontSize="18"
                   FontStyle="Italic"
                   Foreground="Gray"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
    </Grid>
</Page>

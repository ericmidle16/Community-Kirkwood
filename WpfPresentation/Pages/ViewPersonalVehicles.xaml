<Page x:Class="WpfPresentation.Pages.ViewPersonalVehicles"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPresentation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="700"
      Title="viewPersonalVehicles" Loaded="Page_Loaded">



    <Page.Resources>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" >
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="White" Offset="0.0" />
                        <GradientStop Color="#FF4675D0" Offset="0.25" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="1" Content="Vehicles" Style="{StaticResource TitleLabel}"/>
        <DataGrid Grid.Row="1" Grid.Column="1" x:Name="grdPersonalVehicles" AutoGenerateColumns="False" SelectionChanged="grdPersonalVehicles_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="VIN Number" Binding="{Binding VehicleID}" Width="auto"/>
                <DataGridTextColumn Header="Active" Binding="{Binding Active}" Width="auto"/>
                <DataGridTextColumn Header="Color" Binding="{Binding Color}" Width="auto"/>
                <DataGridTextColumn Header="Make" Binding="{Binding Make}" Width="auto"/>
                <DataGridTextColumn Header="Model" Binding="{Binding Model}" Width="auto"/>
                <DataGridTextColumn Header="Year" Binding="{Binding Year}" Width="auto"/>
                <DataGridTextColumn Header="License Plate" Binding="{Binding LicensePlateNumber}" Width="auto"/>
                <DataGridTextColumn Header="Is Insured" Binding="{Binding InsuranceStatus}" Width="auto"/>
                <DataGridTextColumn Header="Number Of Seats" Binding="{Binding NumberOfSeats}" Width="auto"/>
                <DataGridTextColumn Header="Transportable Items" Binding="{Binding TransportUtility}" Width="auto"/>
            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Row="2" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" x:Name="btnAdd"  Content="Add Vehicle"  Click="btnAdd_Click" Style="{StaticResource CallToAction}"/>
            <Button Grid.Column="1" x:Name="btnActivate"  Content="Activate Vehicle" Click="btnActivate_Click" Style="{StaticResource CallToAction}"/>
            <Button Grid.Column="2" x:Name="btnLicense"  Content="Add License" Click="btnLicense_Click" Style="{StaticResource CallToAction}"/>
            <Button Grid.Column="1" x:Name="btnLeave"  Content="Back" Click="btnLeave_Click" Style="{StaticResource BackButton}" Grid.ColumnSpan="2" Margin="82,57,84,-37"/>
            <Button Grid.Column="3" x:Name="btnUpdate"  Content="Update Vehicle" Click="btnUpdate_Click" Style="{StaticResource CallToAction}" Margin="10,10,10,10"/>

        </Grid>


    </Grid>
</Page>

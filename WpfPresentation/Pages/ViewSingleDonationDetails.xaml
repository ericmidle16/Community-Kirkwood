<Page x:Class="WpfPresentation.Pages.ViewSingleDonationDetails"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPresentation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewSingleDonationDetails" Loaded="Page_Loaded">

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"  Content="Donation Details" Style="{StaticResource TitleLabel}"/>


            <Label Grid.Column="1" Grid.Row="1" Content="Donation Date:" Style="{StaticResource LabelLeft}"/>
            <TextBox x:Name="txtDonationDate"  Grid.Row="1" Grid.Column="2" IsEnabled="False"/>

            <Label Grid.Row="2" Grid.Column="1" Content="Donation Amount:" Style="{StaticResource LabelLeft}"/>
            <TextBox x:Name="txtDonationAmount" Grid.Row="2" Grid.Column="2" IsEnabled="False" />

            <Label Grid.Row="3" Grid.Column="1" Content="Comment:" Style="{StaticResource LabelLeft}"/>
            <TextBox Grid.Row="3" Grid.Column="2" x:Name="txtComment" IsEnabled="False"/>

            <Label Grid.Row="4" Grid.Column="1" Content="Project ID:" Style="{StaticResource LabelLeft}"/>
            <TextBox Grid.Row="4" Grid.Column="2" x:Name="txtProjectID" IsEnabled="False"/>

            <Label Grid.Row="5" Grid.Column="1" Content="Project Name:" Style="{StaticResource LabelLeft}"/>
            <TextBox Grid.Row="5" Grid.Column="2" x:Name="txtProjectName" IsEnabled="False"/>

            <Label Grid.Row="6" Grid.Column="1" Content="Location Name:" Style="{StaticResource LabelLeft}"/>
            <TextBox Grid.Row="6" Grid.Column="2" x:Name="txtLocation" IsEnabled="False"/>

            <Grid Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button x:Name="btnProjectPage" Grid.Column="0" Content="Project Page" Click="btnProjectPage_Click" Style="{StaticResource CallToActionSecondary}"/>
                <Button x:Name="btnInvoice" Grid.Column="1" Content="Invoice" Click="btnInvoice_Click" Style="{StaticResource CallToActionSecondary}"/>
                <Button x:Name="btnBack" Grid.Column="2"  Content="Back" Click="btnBack_Click" Style="{StaticResource BackButton}" />
            </Grid>
        </Grid>
    </Grid>
</Page>
<Page x:Class="WpfPresentation.Pages.ViewSingleExpense"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPresentation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="750"
      Title="ViewSingleExpense">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label Grid.Row="2" Grid.Column="1" Content="Expense Date" Style="{StaticResource LabelLeft}"/>
        <TextBox x:Name="txtExpenseDate" Grid.Row="2" Grid.Column="2" Margin="10" Width="250" IsReadOnly="True"/>

        <Label Grid.Row="3" Grid.Column="1" Content="Amount" Margin="10" VerticalAlignment="Center" Style="{StaticResource LabelLeft}"/>
        <TextBox x:Name="txtExpenseAmount" Grid.Row="3" Grid.Column="2" Margin="10" Width="250" IsReadOnly="True"/>

        <Label Grid.Row="4" Grid.Column="1" Content="Expense Type" Style="{StaticResource LabelLeft}"/>
        <TextBox x:Name="txtExpenseType" Grid.Row="4" Grid.Column="2" Margin="10" Width="250" IsReadOnly="True"/>

        <Label Grid.Row="5" Grid.Column="1" Content="Description" Style="{StaticResource LabelLeft}"/>
        <TextBox 
    x:Name="txtExpenseDescription"
    Grid.Row="5"
    Grid.Column="2"
    Margin="10"
    Width="250"
    Height="80"
    TextWrapping="Wrap"
    AcceptsReturn="True"
    VerticalContentAlignment="Top"
    Padding="5"
           IsReadOnly="True" />

        <Grid Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btnSubmitInvoice" Grid.Column="0" Content="Submit Invoice" Click="btnSubmitInvoice_Click" Style="{StaticResource CallToAction}"/>
            <Button x:Name="btnBackAllExpenses" Grid.Column="1" Content="Return to List" Click="btnBackAllExpenses_Click" Style="{StaticResource BackButton}"/>
        </Grid>
    </Grid>
</Page>

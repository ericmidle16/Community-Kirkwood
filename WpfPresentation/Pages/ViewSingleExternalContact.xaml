    <Page x:Class="WpfPresentation.Pages.ViewSingleExternalContact"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPresentation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="700"
      Title="ViewSingleExternalContact">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="1.6*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        
        <Label x:Name="lblExternalContactDetails" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="4" Style="{StaticResource TitleLabel}">External Contact Details</Label>

        <Label Grid.Row="1" Grid.Column="1" Style="{StaticResource LabelLeft}">Contact:</Label>
        <TextBox x:Name="lblContactName" Grid.Row="1" Grid.Column="2" IsEnabled="False"></TextBox>

        <Label Grid.Row="1" Grid.Column="3" Style="{StaticResource LabelLeft}">Name:</Label>
        <TextBox x:Name="lblFullName" Grid.Row="1" Grid.Column="4" IsEnabled="False"/>

        <Label Grid.Row="2" Grid.Column="1" Style="{StaticResource LabelLeft}">Email:</Label>
        <TextBox x:Name="lblEmail" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" IsEnabled="False"/>

        <Grid Grid.Row="2" Grid.Column="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Style="{StaticResource LabelLeft}">Phone:</Label>
            <TextBox x:Name="lblPhone" Grid.Column="1" IsEnabled="False" />
        </Grid>
        



        <Label Grid.Row="3" Grid.Column="1" Style="{StaticResource LabelLeft}">Contact Type:</Label>
        <TextBox x:Name="lblContactTypeID" Grid.Row="3" Grid.Column="2" IsEnabled="False"/>

        <Label Grid.Row="3" Grid.Column="3" Style="{StaticResource LabelLeft}">Job Title:</Label>
        <TextBox x:Name="lblJobTitle" Grid.Row="3" Grid.Column="4" IsEnabled="False"/>

        <Label Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource LabelLeft}">Type Description:</Label>
        <TextBox x:Name="lblContactTypeDescription" Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="3" IsEnabled="False"/>

        

       

        <Label Grid.Row="5" Grid.Column="1" Style="{StaticResource LabelLeft}">Address:</Label>
        <TextBox x:Name="lblAddress" Grid.Row="5" Grid.Column="2"  Grid.ColumnSpan="3" IsEnabled="False"/>

        <Label Grid.Row="6" Grid.Column="1" Style="{StaticResource LabelLeft}">Description:</Label>
        <TextBox x:Name="lblDescription" Grid.Row="6" Grid.Column="2" Grid.ColumnSpan="3" IsEnabled="False" Style="{StaticResource Description}"/>

        <Grid Grid.Row="7" Grid.Column="2" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btnEdit" Grid.Column="0" Style="{StaticResource WarningButton}" Click="btnEdit_Click">Edit</Button>
            <Button x:Name="Deactivate" Grid.Column="1" Style="{StaticResource DangerButton}" Click="Deactivate_Click">Deactivate</Button>
            <Button x:Name="btnBack" Grid.Column="2" Style="{StaticResource BackButton}" Click="btnBack_Click">Back</Button>
        </Grid>
        

    </Grid>
</Page>

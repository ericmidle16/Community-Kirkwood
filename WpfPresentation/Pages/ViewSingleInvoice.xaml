    <Page x:Class="WpfPresentation.Pages.ViewSingleInvoice"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPresentation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewSingleInvoice" Loaded="Page_Loaded">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height=".5*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label x:Name="lblTitle" Grid.Row="0" Grid.Column="1" Content="Invoice Details" Grid.ColumnSpan="3" Style="{StaticResource TitleLabel}"/>

        <Label  Grid.Column="1" Grid.Row="1" Content="Status:" Style="{StaticResource LabelLeft}"/>
        <TextBox x:Name="txtStatus" Grid.Column="2" Grid.Row="1" IsReadOnly="True"/>

        <Label Grid.Column="1" Grid.Row="2" Content="Invoice Date:" Style="{StaticResource LabelLeft}"/>
        <TextBox Grid.Column="2" Grid.Row="2" x:Name="txtInvoiceDate" IsReadOnly="True"/>
        <Label Grid.Column="1" Grid.Row="3" Content="Invoice Number:" Style="{StaticResource LabelLeft}"/>
        <TextBox Grid.Column="2" Grid.Row="3" x:Name="txtInvoiceNumber" IsReadOnly="True"/>

        <Label Grid.Column="1" Grid.Row="4" Content="Invoice Description:" Style="{StaticResource LabelTop}"/>
        <TextBox Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="5" x:Name="txtInvoiceDescription" Style="{StaticResource Description}" IsReadOnly="True"/>

        <Button Grid.Column="1" Grid.Row="6" x:Name="btnChange" Content="Change Status" Style="{StaticResource CallToAction}" Click="btnChange_Click" />
        <Button Grid.Column="3" Grid.Row="6" x:Name="btnBack" Content="Back" Style="{StaticResource BackButton}" Click="btnBack_Click" />
    </Grid>
</Page>

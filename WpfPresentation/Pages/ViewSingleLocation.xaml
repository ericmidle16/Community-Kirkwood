    <Page x:Class="WpfPresentation.Pages.ViewSingleLocation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPresentation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="700"
      Title="ViewSingleLocation" Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="30"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        
        <Label x:Name="txtName" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" Style="{StaticResource TitleLabel}" />
        
        <Label x:Name="lblAddress" Content="Street" Grid.Row="3" Grid.Column="2" Style="{StaticResource LabelLeft}"/>
        <TextBox x:Name="txtStreet" Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="2" IsEnabled="False" />

        <Label x:Name="lblCity" Content="City" Grid.Row="4" Grid.Column="2" Style="{StaticResource LabelLeft}"/>
        <TextBox x:Name="txtCity" Grid.Row="4" Grid.Column="3" Grid.ColumnSpan="2" FontSize="14" IsEnabled="False" />

        <Label x:Name="lblState" Content="State" Grid.Row="5" Grid.Column="2" Style="{StaticResource LabelLeft}"/>
        <TextBox x:Name="txtState" Grid.Row="5" Grid.Column="3" IsEnabled="False" />

        <Grid Grid.Row="5" Grid.Column="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <Label x:Name="lblZip" Content="Zip" Grid.Column="0" Style="{StaticResource LabelLeft}"/>
            <TextBox x:Name="txtZip" Grid.Column="1" IsEnabled="False" />
        </Grid>

        <Label x:Name="lblCountry" Content="Country" Grid.Row="6" Grid.Column="2" Style="{StaticResource LabelLeft}"/>
        <TextBox x:Name="txtCountry" Grid.Row="6" Grid.Column="3" IsEnabled="False" />

        <Border BorderThickness="2" BorderBrush="#FF000000" Grid.Row="3" Grid.RowSpan="3" Grid.Column="1" Grid.ColumnSpan="1" >
            <Image x:Name="imgImage"  Margin="3" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="1" Grid.RowSpan="3" IsEnabled="False" />
        </Border>
        <Label x:Name="lblDetails" Content="Location Details: " Grid.Row="7" Grid.Column="1" Style="{StaticResource LabelTop}" />
        <TextBox x:Name="txtDetails" Style="{StaticResource TextBottom}" Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="4" IsEnabled="False" />

        <Button x:Name="btnEdit" Grid.Row="9" Grid.Column="3" Content="Edit" Style="{StaticResource WarningButton}" Click="btnEdit_Click" Visibility="Hidden"/>
        <Button x:Name="btnReturn" Grid.Row="9" Grid.Column="4" Content="Back" Style="{StaticResource BackButton}" Click="btnReturn_Click" />
    </Grid>
</Page>

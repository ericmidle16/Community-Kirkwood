    <Page x:Class="WpfPresentation.ViewSingleUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPresentation"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="700" 
      Title="ViewSingleUser" Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition />
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="4" Content="User Status" Style="{StaticResource TitleLabel}"/>

        <Border BorderThickness="2" BorderBrush="#FF000000" Grid.Row="1" Grid.RowSpan="3" Grid.Column="1" Grid.ColumnSpan="1" >
            <Image x:Name="imgImage"  Margin="3" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="1" Grid.RowSpan="3" IsEnabled="False" />
        </Border>

        <Label x:Name="lblGivenName" Content="First Name" Grid.Row="4" Grid.Column="1" Style="{StaticResource LabelTop}"/>
        <TextBox x:Name="txtGivenName" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource TextBottom}" IsEnabled="False" />

        <Label x:Name="lblFamilyName" Content="Last Name" Style="{StaticResource LabelTop}" Grid.Row="6" Grid.Column="1" />
        <TextBox x:Name="txtFamilyName" Style="{StaticResource TextBottom}" Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2" IsEnabled="False" />

        <Label x:Name="lblPhone" Content="Phone" Style="{StaticResource LabelTop}" Grid.Row="8" Grid.Column="1" />
        <TextBox x:Name="txtPhone" Style="{StaticResource TextBottom}" Grid.Row="9" Grid.Column="1" Grid.ColumnSpan="2" IsEnabled="False" />
        
        <Label x:Name="lblEmail" Content="Email" Grid.Row="10" Grid.Column="1" Style="{StaticResource LabelTop}"/>
        <TextBox x:Name="txtEmail" Grid.Row="11" Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource TextBottom}" IsEnabled="False" />
        
        
        <TextBox x:Name="txtBio" Grid.Row="1" Grid.Column="2" Grid.RowSpan="3" Grid.ColumnSpan="3" Style="{StaticResource Description}" IsEnabled="False" />

        <CheckBox x:Name="ckbActive" Grid.Row="5" Grid.Column="3" Content="Active" IsEnabled="True" Checked="ckbActive_Checked" Unchecked="ckbActive_Unchecked" />
        <CheckBox x:Name="ckbReadOnly" Grid.Row="5" Grid.Column="4" Content="Read Only" IsEnabled="True" Checked="ckbReadOnly_Checked" Unchecked="ckbReadOnly_Unchecked" />
        <CheckBox x:Name="ckbSuspended" Grid.Row="6" Grid.Column="3" Content="Suspended" IsEnabled="True" Checked="ckbSuspended_Checked" Unchecked="ckbSuspended_Unchecked"/>

       
        <Label x:Name="lblDatePicker" Content="Restriction Date Ends:" Grid.Row="7" Grid.Column="3" Grid.ColumnSpan="2" Style="{StaticResource LabelTop}" />
        <DatePicker x:Name="dateReactivation" Grid.Row="8" Grid.Column="3" Grid.ColumnSpan="2" IsEnabled="False" Style="{StaticResource DateUnder}"/>
        
        <Label x:Name="lblRestrictionDetails" Content="  Restriction Details:" Grid.Row="9" Grid.Column="3" Grid.ColumnSpan="2" Style="{StaticResource LabelTop}" />
        <TextBox x:Name="txtRestrictionDetails" Grid.Row="10" Grid.Column="3" Grid.RowSpan="2" Grid.ColumnSpan="2" Style="{StaticResource Description}" IsEnabled="False" />
        
        <Button x:Name="btnSave" Grid.Row="12" Grid.Column="1"  Content="Save Status" Style="{StaticResource CallToAction}" Click="btnSave_Click" />
        <Button x:Name="btnProfile" Grid.Row="12" Grid.Column="2" Content="View Profile" Style="{StaticResource CallToActionSecondary}" Click="btnProfile_Click"/>
        <Button x:Name="btnRoles" Grid.Row="12" Grid.Column="3" Content="Roles" Style="{StaticResource CallToActionSecondary}" Click="btnRoles_Click" />
        <Button x:Name="btnReturn" Grid.Row="12" Grid.Column="4"  Content="Return to List" Style="{StaticResource BackButton}" Click="btnReturn_Click" />
    </Grid>
</Page>    
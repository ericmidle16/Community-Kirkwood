<Page x:Class="WpfPresentation.Pages.ViewVolunteerProfile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPresentation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="750"
      Title="ViewVolunteerProfile" Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition />
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="txtName" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"  
              Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" FontSize="18" FontWeight ="Bold" IsEnabled="False" Style="{StaticResource TitleLabel}"/>
        <!--<Border BorderThickness="2" BorderBrush="#FF000000" Grid.Row="3" Grid.RowSpan="3" Grid.Column="1" >
            <Image x:Name="imgImage"  Margin="3" Grid.Row="1" Grid.Column="1" Grid.RowSpan="3" IsEnabled="False" />
        </Border>-->
        <Label Grid.Row="2" Grid.Column="1"  Grid.ColumnSpan="2" Style="{StaticResource LabelTop}" Content="Projects" />
        <DataGrid x:Name="ProjectsDataGrid" Grid.Row="3" Grid.RowSpan="3" Grid.Column="1" Grid.ColumnSpan ="2" SelectionMode="Single" IsReadOnly="True" />
        <Label Grid.Row="2" Grid.Column="3"  Grid.ColumnSpan="2" Style="{StaticResource LabelTop}" Content="Active Vehicles" />
        <DataGrid x:Name="VehiclesDataGrid" Grid.Row="3" Grid.RowSpan="3" Grid.Column="3" Grid.ColumnSpan ="2" SelectionMode="Single" IsReadOnly="True" />
        <Label Grid.Row="6" Grid.Column="1"  Grid.ColumnSpan="2" Content="Skills" Style="{StaticResource LabelTop}"/>
        <DataGrid x:Name="SkillsDataGrid" Grid.Row="7" Grid.RowSpan="3" Grid.Column="1" Grid.ColumnSpan ="2" SelectionMode="Single" IsReadOnly="True" />
        <Label Grid.Row="6" Grid.Column="3"  Grid.ColumnSpan="2" Content="Availability" Style="{StaticResource LabelTop}"/>
        <DataGrid x:Name="AvailabilityDataGrid" Grid.Row="7" Grid.RowSpan="3" Grid.Column="3" Grid.ColumnSpan ="2" SelectionMode="Single" IsReadOnly="True" />
        <Button x:Name="btnReturn" Grid.Row="11" Grid.Column="4"  Content="Return to List" Style="{StaticResource BackButton}" Click="btnReturn_Click" />
    </Grid>
</Page>

<Page x:Class="WpfPresentation.Pages.View_Profile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPresentation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="700"
      Title="View Profile">

    <Grid>
        <Grid.RowDefinitions>

            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="4*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="2.5*"></ColumnDefinition>
            <ColumnDefinition Width="2.5*"></ColumnDefinition>
            <ColumnDefinition Width="2.5*"></ColumnDefinition>
            <ColumnDefinition Width="2.5*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="4">
            <Label x:Name="txtName" Content="Name" Style="{StaticResource TitleLabel}"/>
        </Grid>

        <Button Name="btnSkills" Grid.Row="1" Grid.Column="1" Content="View Skills" Style="{StaticResource CallToActionSecondary}" Click="btnSkills_Click"/>
        <Button Name="btnDonations" Grid.Row="1" Grid.Column="2" Content="View Donations" Style="{StaticResource CallToActionSecondary}" Click="btnDonations_Click"/>
        <Button Name="btnAvailability" Grid.Row="1" Grid.Column="3" Content="View Availability" Style="{StaticResource CallToActionSecondary}" Click="btnAvailability_Click"/>
        <Button Name="btnVehicles" Grid.Row="1" Grid.Column="4" Content="View Vehicles" Style="{StaticResource CallToActionSecondary}" Click="btnVehicles_Click"/>


        <Grid Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="2" Grid.RowSpan="1">
            <TextBox Name="txtProfileDescription" Style="{StaticResource Description}" IsEnabled="False"/>
        </Grid>

        <TextBox x:Name="txtEmail" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" IsEnabled="False"/>
        <TextBox x:Name ="txtLocation" Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="2" IsEnabled="False"/>
        
        <Grid Grid.Column="3" Grid.ColumnSpan="2" Grid.Row="3">
            <Image x:Name="imgProfile"/>
        </Grid>


        <Button Name="btnProjects" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Content="View Projects" Style="{StaticResource CallToActionSecondary}" Click="btnProjects_Click"/>


        <Grid Grid.Row="4" Grid.Column="3">
            <Button Name="btnEditProfile" Content="Edit Profile" Style="{StaticResource WarningButton}" Click="btnEditProfile_Click"/>
        </Grid>

        <Grid Grid.Row="4" Grid.Column="4">
            <Button Name="btnBack" Content="Back" Style="{StaticResource BackButton}" Click="btnBack_Click"/>
        </Grid>
        
        

        

    </Grid>
</Page>

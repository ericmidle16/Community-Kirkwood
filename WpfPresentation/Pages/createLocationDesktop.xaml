<Page x:Class="WpfPresentation.Pages.createLocationDesktop"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPresentation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="700"
      Title="createLocationDesktop" Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Label x:Name="tbkCreateLocation" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" Style="{StaticResource TitleLabel}">Create Location</Label>
        
        <Label x:Name="lblLocationName" Grid.Row="1" Grid.Column="1" Style="{StaticResource LabelTop}" Content="Location Name"/>
        <TextBox x:Name="txtLocationName" Grid.Row="2" Grid.Column="1" TabIndex="0"/>

        <Label x:Name="lblAddress" Grid.Row="1" Grid.Column="2" Style="{StaticResource LabelTop}" Content="Street Address"/>
        <TextBox x:Name="txtAddress" Grid.Row="2" Grid.Column="2" TabIndex="1"/>

        <Label x:Name="lblCity" Grid.Row="3" Grid.Column="1" Style="{StaticResource LabelTop}" Content="City"/>
        <TextBox x:Name="txtCity" Grid.Row="4" Grid.Column="1" TabIndex="2"/>

        <Label x:Name="lblState" Grid.Row="3" Grid.Column="2" Style="{StaticResource LabelTop}" Content="State"/>
        <TextBox x:Name="txtState" Grid.Row="4" Grid.Column="2" TabIndex="3"/>

        <Label x:Name="lblZip" Grid.Row="5" Grid.Column="1" Style="{StaticResource LabelTop}" Content="ZIP Code"/>
        <TextBox x:Name="txtZip" Grid.Row="6" Grid.Column="1" TabIndex="4"/>

        <Label x:Name="lblCountry" Grid.Row="5" Grid.Column="2" Style="{StaticResource LabelTop}" Content="Country"/>
        <TextBox x:Name="txtCountry" Grid.Row="6" Grid.Column="2" TabIndex="5"/>

        <Label x:Name="lblDescription" Grid.Row="7" Grid.Column="1" Style="{StaticResource LabelTop}" Content="Description"/>
        <TextBox x:Name="txtDescription" Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="3" TabIndex="6" Style="{StaticResource TextBottom}"/>
        
        
        <Button x:Name="btnSubmit" Grid.Row="9" Grid.Column="1" Grid.ColumnSpan="2" Content="Submit" Style="{StaticResource CallToAction}" TabIndex="7" Click="btnSubmit_Click"/>
        <Button x:Name="btnCancel" Grid.Row="9" Grid.Column="3" Content="Cancel" Style="{StaticResource WarningButton}" TabIndex="8" Click="btnCancel_Click"/>
        
        <Rectangle StrokeThickness="2" Grid.Row="1" Grid.RowSpan="5" Grid.Column="3" Margin="10,10,10,10" Fill="LightGray"/>
        <Image x:Name="imgLocation" Grid.Row="1" Grid.RowSpan="5" Grid.Column="3" Margin="10,10,10,10" Stretch="Uniform" StretchDirection="Both"/>
        <Button x:Name="btnChooseImage" Grid.Row="6" Grid.Column="3" Click="btnChooseImage_Click">Choose Image</Button>
    </Grid>
</Page>

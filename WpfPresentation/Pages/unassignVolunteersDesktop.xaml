<Page x:Class="WpfPresentation.Pages.unassignVolunteersDesktop"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPresentation.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="700"
      Title="unassignVolunteersDesktop" Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="300"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="tbkUnassignVolunteers" Grid.Row="1" Grid.Column="2"
        Margin="5, 0, 5, 20" FontSize="20" VerticalAlignment="Bottom" HorizontalAlignment="Center">Unassign Volunteers</TextBlock>
        <DataGrid x:Name="grdVolunteers" Grid.Row="2" Grid.Column="1"  Grid.ColumnSpan="3" SelectionMode="Single" IsReadOnly="True" AutoGeneratingColumn="grdVolunteers_AutoGeneratingColumn"/>
        <Button x:Name="btnUnassign" Grid.Row="4" Grid.Column="2" Margin="25,5,25,5" FontSize="16" VerticalContentAlignment="Center" Click="btnUnassign_Click">Unassign</Button>
    </Grid>
</Page>

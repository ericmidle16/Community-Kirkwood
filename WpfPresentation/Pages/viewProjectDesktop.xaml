            </TextBox>

        </Grid> <!-- END Grid for Displaying Project Information -->

        <Grid Grid.Row="3"> <!-- START Grid for Back & Join Project Buttons -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" x:Name="btnJoinLeaveProject" Content="Join Project" Style="{StaticResource CallToAction}" Click="btnJoinLeaveProject_Click"/>
            <Button Grid.Column="1" x:Name="btnDonate" Content="Donate" Style="{StaticResource CallToActionSecondary}" Click="btnDonate_Click"/>
            <Button Grid.Column="2" x:Name="btnEditProject" Content="Edit Project" Style="{StaticResource WarningButton}" Click="btnEditProject_Click"/>
            <Button Grid.Column="3" x:Name="btnBack" Content="Back" Style="{StaticResource BackButton}" Click="btnBack_Click"/>

        </Grid> <!-- END Grid for Back & Join Project Buttons -->
        
    </Grid> <!-- END Page Grid - Page for Viewing Project Data -->
</Page>